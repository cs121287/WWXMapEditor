<UserControl x:Class="WWXMapEditor.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WWXMapEditor.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,2">
            <Grid Margin="20,15">
                <TextBlock Text="SETTINGS" 
                           FontFamily="Consolas"
                           FontSize="36"
                           FontWeight="Bold"
                           Foreground="{DynamicResource ForegroundBrush}"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>

                <Button Content="âœ•" 
                        HorizontalAlignment="Right"
                        Style="{StaticResource EditorButtonStyle}"
                        Width="40"
                        Height="40"
                        FontSize="20"
                        Command="{Binding CloseCommand}"/>
            </Grid>
        </Border>

        <!-- Settings Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Category List -->
            <Border Grid.Column="0" Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,2,0">
                <ListBox Background="Transparent"
                         BorderThickness="0"
                         ItemsSource="{Binding CategoryNames}"
                         SelectedIndex="{Binding SelectedCategoryIndex}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Border" 
                                                Background="Transparent" 
                                                BorderThickness="0"
                                                Padding="20,15">
                                            <TextBlock Text="{Binding}" 
                                                       Foreground="{DynamicResource ForegroundBrush}" 
                                                       FontFamily="Consolas"
                                                       FontSize="16"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource Surface3Brush}"/>
                                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                                <Setter TargetName="Border" Property="BorderThickness" Value="3,0,0,0"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource Surface2Brush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Border>

            <!-- Settings Pages -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ContentControl Margin="30" Content="{Binding CurrentSettingsPage}"/>
            </ScrollViewer>
        </Grid>

        <!-- Bottom Bar -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,2,0,0">
            <Grid Margin="20,15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="RESET TO DEFAULTS" 
                            Style="{StaticResource MenuButtonStyle}"
                            Width="200"
                            Height="40"
                            FontSize="14"
                            Command="{Binding ResetToDefaultsCommand}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="APPLY" 
                            Style="{StaticResource MenuButtonStyle}"
                            Width="120"
                            Height="40"
                            FontSize="16"
                            Margin="0,0,10,0"
                            Command="{Binding ApplyCommand}"/>

                    <Button Content="SAVE" 
                            Style="{StaticResource MenuButtonStyle}"
                            Width="120"
                            Height="40"
                            FontSize="16"
                            Margin="0,0,10,0"
                            Command="{Binding SaveCommand}"/>

                    <Button Content="CANCEL" 
                            Style="{StaticResource MenuButtonStyle}"
                            Width="120"
                            Height="40"
                            FontSize="16"
                            Command="{Binding CancelCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>