<UserControl x:Class="WWXMapEditor.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WWXMapEditor.Views"
             xmlns:scaling="clr-namespace:WWXMapEditor.UI.Scaling"
             xmlns:conv="clr-namespace:WWXMapEditor.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SurfaceBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="0,0,0,2">
            <Grid Margin="{DynamicResource MarginLarge}">
                <TextBlock Text="SETTINGS" 
                           FontFamily="Consolas"
                           FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                              Converter={StaticResource MultiplyConverter}, ConverterParameter=36}"
                           FontWeight="Bold"
                           Foreground="{DynamicResource ForegroundBrush}"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>

                <Button Content="âœ•" 
                        HorizontalAlignment="Right"
                        Style="{StaticResource EditorButtonStyle}"
                        Width="{DynamicResource ScaledEditorButtonSize}"
                        Height="{DynamicResource ScaledEditorButtonSize}"
                        FontSize="{DynamicResource FontSizeXLarge}"
                        Command="{Binding CloseCommand}"/>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="200" MaxWidth="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Categories -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource SurfaceBrush}" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="0,0,2,0">
                <ListBox Background="Transparent"
                         BorderThickness="0"
                         ItemsSource="{Binding CategoryNames}"
                         SelectedIndex="{Binding SelectedCategoryIndex}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Border" 
                                                Background="Transparent" 
                                                BorderThickness="0"
                                                Padding="{DynamicResource PaddingLarge}">
                                            <TextBlock Text="{Binding}" 
                                                       Foreground="{DynamicResource ForegroundBrush}" 
                                                       FontFamily="Consolas"
                                                       FontSize="{DynamicResource FontSizeLarge}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource Surface3Brush}"/>
                                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                                <Setter TargetName="Border" Property="BorderThickness" Value="3,0,0,0"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource Surface2Brush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Border>

            <ContentControl Grid.Column="1" 
                            Margin="{DynamicResource MarginXLarge}" 
                            Content="{Binding CurrentSettingsPage}"/>
        </Grid>

        <!-- Bottom Bar -->
        <Border Grid.Row="2" 
                Background="{DynamicResource SurfaceBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="0,2,0,0">
            <Grid Margin="{DynamicResource MarginLarge}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="RESET TO DEFAULTS" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            MinWidth="200"
                            Height="{DynamicResource ScaledEditorButtonSize}"
                            FontSize="{DynamicResource FontSizeMedium}"
                            Command="{Binding ResetToDefaultsCommand}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="APPLY" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            MinWidth="120"
                            Height="{DynamicResource ScaledEditorButtonSize}"
                            FontSize="{DynamicResource FontSizeLarge}"
                            Margin="{DynamicResource MarginSmall}"
                            Command="{Binding ApplyCommand}"/>

                    <Button Content="SAVE" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            MinWidth="120"
                            Height="{DynamicResource ScaledEditorButtonSize}"
                            FontSize="{DynamicResource FontSizeLarge}"
                            Margin="{DynamicResource MarginSmall}"
                            Command="{Binding SaveCommand}"/>

                    <Button Content="CANCEL" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            MinWidth="120"
                            Height="{DynamicResource ScaledEditorButtonSize}"
                            FontSize="{DynamicResource FontSizeLarge}"
                            Command="{Binding CancelCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>