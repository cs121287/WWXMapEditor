<UserControl x:Class="WWXMapEditor.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WWXMapEditor.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    
    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="WWX MAP EDITOR" 
                   FontFamily="Consolas"
                   FontSize="72"
                   FontWeight="Bold"
                   Foreground="{DynamicResource ForegroundBrush}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,100,0,0"/>
        
        <!-- Menu Items -->
        <StackPanel Grid.Row="1" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,50">
            
            <Button Content="NEW MAP" 
                    Style="{StaticResource MenuButtonStyle}"
                    Command="{Binding NewMapCommand}"/>
            
            <Button Content="LOAD MAP" 
                    Style="{StaticResource MenuButtonStyle}"
                    Command="{Binding LoadMapCommand}"/>
            
            <Button Content="SETTINGS" 
                    Style="{StaticResource MenuButtonStyle}"
                    Command="{Binding SettingsCommand}"/>
            
            <Button Content="EXIT" 
                    Style="{StaticResource MenuButtonStyle}"
                    Command="{Binding ExitCommand}"/>
        </StackPanel>
        
        <!-- Version Info -->
        <TextBlock Grid.Row="2" 
                   Text="Version 1.0.0" 
                   FontFamily="Consolas"
                   FontSize="16"
                   Foreground="{DynamicResource ForegroundSecondaryBrush}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,20"/>
    </Grid>
</UserControl>