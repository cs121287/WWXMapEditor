<UserControl x:Class="WWXMapEditor.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WWXMapEditor.Views"
             xmlns:scaling="clr-namespace:WWXMapEditor.UI.Scaling"
             xmlns:conv="clr-namespace:WWXMapEditor.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">

    <Grid>
        <Grid.Background>
            <DrawingBrush TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" Opacity="0.02">
                <DrawingBrush.Drawing>
                    <DrawingGroup>
                        <GeometryDrawing Brush="{DynamicResource BackgroundBrush}"
                                         Geometry="M0,0 L100,0 L100,100 L0,100 Z"/>
                        <GeometryDrawing Geometry="M 0,50 L 50,0 L 100,50 L 50,100 Z">
                            <GeometryDrawing.Pen>
                                <Pen Brush="{DynamicResource AccentBrush}" Thickness="0.5"/>
                            </GeometryDrawing.Pen>
                        </GeometryDrawing>
                        <GeometryDrawing Geometry="M 25,25 L 75,25 L 75,75 L 25,75 Z">
                            <GeometryDrawing.Pen>
                                <Pen Brush="{DynamicResource AccentBrush}" Thickness="0.5"/>
                            </GeometryDrawing.Pen>
                        </GeometryDrawing>
                    </DrawingGroup>
                </DrawingBrush.Drawing>
            </DrawingBrush>
        </Grid.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Border Grid.Row="0" Padding="{DynamicResource PaddingXLarge}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="WWX MAP EDITOR" 
                               Style="{StaticResource HeaderTextStyle}"
                               FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                                  Converter={StaticResource MultiplyConverter}, ConverterParameter=36}"
                               Foreground="{DynamicResource ForegroundBrush}"
                               Margin="{DynamicResource MarginMedium}">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="4"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="Strategic Map Creation Tool" 
                               Style="{StaticResource SubtitleTextStyle}"
                               HorizontalAlignment="Center"
                               FontSize="{DynamicResource FontSizeLarge}"
                               Foreground="{DynamicResource ForegroundSecondaryBrush}"
                               Opacity="0.7"/>
                </StackPanel>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left area -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Background="{DynamicResource Surface2Brush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource CornerRadiusLarge}"
                            Padding="40"
                            Margin="0,40,0,0">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="5" Opacity="0.2" BlurRadius="15"/>
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock Text="MAIN MENU" 
                                       Style="{StaticResource TitleTextStyle}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,30"
                                       FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                                          Converter={StaticResource MultiplyConverter}, ConverterParameter=32}"
                                       Foreground="{DynamicResource ForegroundBrush}"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Row 1 -->
                                <Button Grid.Row="0" Grid.Column="0"
                                        Content="NEW MAP" 
                                        Style="{StaticResource MenuButtonStyle}"
                                        Width="280"
                                        Height="60"
                                        Margin="5"
                                        FontSize="{DynamicResource FontSizeLarge}"
                                        Command="{Binding DataContext.NavigateCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="NewMapCreation">
                                    <Button.ToolTip>
                                        <ToolTip Content="Create a new map from scratch"/>
                                    </Button.ToolTip>
                                </Button>

                                <Button Grid.Row="0" Grid.Column="2"
                                        Content="SETTINGS" 
                                        Style="{StaticResource MenuButtonStyle}"
                                        Width="280"
                                        Height="60"
                                        Margin="5"
                                        FontSize="{DynamicResource FontSizeLarge}"
                                        Command="{Binding DataContext.NavigateCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="Settings">
                                    <Button.ToolTip>
                                        <ToolTip Content="Configure editor settings and preferences"/>
                                    </Button.ToolTip>
                                </Button>

                                <!-- Row 2 -->
                                <Button Grid.Row="1" Grid.Column="0"
                                        Content="LOAD MAP" 
                                        Style="{StaticResource MenuButtonStyle}"
                                        Width="280"
                                        Height="60"
                                        Margin="5"
                                        FontSize="{DynamicResource FontSizeLarge}"
                                        Command="{Binding DataContext.NavigateCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="LoadMap">
                                    <Button.ToolTip>
                                        <ToolTip Content="Load an existing map for editing"/>
                                    </Button.ToolTip>
                                </Button>

                                <Button Grid.Row="1" Grid.Column="2"
                                        Content="ABOUT" 
                                        Style="{StaticResource MenuButtonStyle}"
                                        Width="280"
                                        Height="60"
                                        Margin="5"
                                        FontSize="{DynamicResource FontSizeLarge}"
                                        Command="{Binding DataContext.NavigateCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="About">
                                    <Button.ToolTip>
                                        <ToolTip Content="Information about WWX Map Editor"/>
                                    </Button.ToolTip>
                                </Button>

                                <!-- Row 3 -->
                                <Button Grid.Row="2" Grid.Column="0"
                                        Content="RECENT MAPS" 
                                        Style="{StaticResource MenuButtonStyle}"
                                        Width="280"
                                        Height="60"
                                        Margin="5"
                                        FontSize="{DynamicResource FontSizeLarge}"
                                        IsEnabled="False">
                                    <Button.ToolTip>
                                        <ToolTip Content="Quick access to recently edited maps"/>
                                    </Button.ToolTip>
                                </Button>

                                <Button Grid.Row="2" Grid.Column="2"
                                        Content="EXIT" 
                                        Style="{StaticResource MenuButtonStyle}"
                                        Width="280"
                                        Height="60"
                                        Margin="5"
                                        FontSize="{DynamicResource FontSizeLarge}"
                                        Command="{Binding DataContext.ExitCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                                    <Button.ToolTip>
                                        <ToolTip Content="Exit the application"/>
                                    </Button.ToolTip>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Grid Grid.Row="1"/>

                    <!-- Info Panels -->
                    <Grid Grid.Row="2" Margin="0,40,0,40"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" 
                                Background="{DynamicResource Surface2Brush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="{StaticResource CornerRadiusMedium}"
                                Padding="25,20"
                                Width="280">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" Opacity="0.15" BlurRadius="10"/>
                            </Border.Effect>

                            <StackPanel>
                                <TextBlock Text="Editor Stats" 
                                           Style="{StaticResource TitleTextStyle}"
                                           FontSize="{DynamicResource FontSizeLarge}"
                                           FontWeight="Bold"
                                           Margin="0,0,0,10"
                                           Foreground="{DynamicResource ForegroundBrush}"/>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" 
                                               Text="Maps Created: " 
                                               FontSize="{DynamicResource FontSizeSmall}"
                                               Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" 
                                               Text="0" 
                                               FontSize="{DynamicResource FontSizeSmall}"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Right"
                                               Foreground="{DynamicResource AccentBrush}"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" 
                                               Text="Total Edit Time: " 
                                               FontSize="{DynamicResource FontSizeSmall}"
                                               Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" 
                                               Text="0h 0m" 
                                               FontSize="{DynamicResource FontSizeSmall}"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Right"
                                               Foreground="{DynamicResource AccentBrush}"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" 
                                               Text="Last Session: " 
                                               FontSize="{DynamicResource FontSizeSmall}"
                                               Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" 
                                               Text="New User" 
                                               FontSize="{DynamicResource FontSizeSmall}"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Right"
                                               Foreground="{DynamicResource AccentBrush}"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" 
                                               Text="Version: " 
                                               FontSize="{DynamicResource FontSizeSmall}"
                                               Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" 
                                               Text="1.0.0" 
                                               FontSize="{DynamicResource FontSizeSmall}"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Right"
                                               Foreground="{DynamicResource AccentBrush}"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" 
                                Background="{DynamicResource Surface2Brush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="{StaticResource CornerRadiusMedium}"
                                Padding="25,20"
                                Width="320">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" Opacity="0.15" BlurRadius="10"/>
                            </Border.Effect>

                            <StackPanel>
                                <TextBlock Text="Quick Tips" 
                                           Style="{StaticResource TitleTextStyle}"
                                           FontSize="{DynamicResource FontSizeLarge}"
                                           FontWeight="Bold"
                                           Margin="0,0,0,10"
                                           Foreground="{DynamicResource ForegroundBrush}"/>
                                <TextBlock Style="{StaticResource DescriptionTextStyle}"
                                           TextWrapping="Wrap"
                                           FontSize="{DynamicResource FontSizeSmall}"
                                           Foreground="{DynamicResource ForegroundSecondaryBrush}">
                                    &#8226; Use keyboard shortcuts for faster editing<LineBreak/>
                                    &#8226; Enable auto-save to prevent data loss<LineBreak/>
                                    &#8226; Grid snapping helps with precise placement<LineBreak/>
                                    &#8226; Press F1 for help at any time
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>

                <!-- Right Image -->
                <Grid Grid.Column="1" Margin="20,40,40,40">
                    <Border Background="{DynamicResource Surface2Brush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource CornerRadiusLarge}"
                            Padding="2"
                            VerticalAlignment="Top">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="5" Opacity="0.2" BlurRadius="15"/>
                        </Border.Effect>

                        <Grid>
                            <Rectangle Fill="{DynamicResource Surface3Brush}"
                                       RadiusX="8"
                                       RadiusY="8"/>
                            <Viewbox Stretch="Uniform" 
                                     StretchDirection="Both"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     MaxWidth="500"
                                     MaxHeight="500">
                                <Grid>
                                    <Image x:Name="MainMenuImage"
                                           Source="pack://application:,,,/Resources/Images/MainMenu/Background.png"
                                           RenderOptions.BitmapScalingMode="HighQuality"
                                           Width="400"
                                           Height="400">
                                        <Image.Effect>
                                            <DropShadowEffect Color="Black" 
                                                              Direction="270" 
                                                              ShadowDepth="2" 
                                                              Opacity="0.1" 
                                                              BlurRadius="5"/>
                                        </Image.Effect>
                                    </Image>

                                    <Border x:Name="ImagePlaceholder"
                                            Background="{DynamicResource Surface3Brush}"
                                            Width="400"
                                            Height="400"
                                            CornerRadius="8">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=MainMenuImage, Path=Source}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <TextBlock Text="WWX"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                                                          Converter={StaticResource MultiplyConverter}, ConverterParameter=72}"
                                                       FontWeight="Bold"
                                                       Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                                       Opacity="0.3"/>
                                            <TextBlock Text="Map Preview"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Bottom"
                                                       Margin="0,0,0,50"
                                                       FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                                                          Converter={StaticResource MultiplyConverter}, ConverterParameter=18}"
                                                       Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                                       Opacity="0.5"/>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Viewbox>

                            <Border Background="{DynamicResource BackgroundBrush}"
                                    Opacity="0.7"
                                    VerticalAlignment="Bottom"
                                    CornerRadius="0,0,8,8"
                                    Padding="10"
                                    Visibility="Collapsed">
                                <TextBlock Text="Strategic Warfare"
                                           HorizontalAlignment="Center"
                                           Foreground="{DynamicResource ForegroundBrush}"
                                           FontSize="{DynamicResource FontSizeLarge}"
                                           FontWeight="Bold"
                                           FontFamily="Consolas"/>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <!-- Footer -->
            <Border Grid.Row="2" Padding="{DynamicResource PaddingLarge}">
                <Grid>
                    <TextBlock Text="&#169; 2025 WWX Map Editor - User: cs121287" 
                               Style="{StaticResource DescriptionTextStyle}"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="{DynamicResource FontSizeSmall}"
                               Foreground="{DynamicResource ForegroundSecondaryBrush}"
                               Opacity="0.6"/>

                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <TextBlock Text="Theme: " 
                                   Style="{StaticResource DescriptionTextStyle}"
                                   VerticalAlignment="Center"
                                   FontSize="{DynamicResource FontSizeSmall}"
                                   Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                   Opacity="0.6"/>
                        <RadioButton Content="Dark" 
                                     IsChecked="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}"
                                     GroupName="ThemeSelection"
                                     Margin="{DynamicResource MarginSmall}"
                                     VerticalAlignment="Center"
                                     FontSize="{DynamicResource FontSizeSmall}"
                                     Foreground="{DynamicResource ForegroundBrush}"
                                     Opacity="0.8"/>
                        <RadioButton Content="Light" 
                                     IsChecked="{Binding DataContext.IsLightTheme, RelativeSource={RelativeSource AncestorType=Window}}"
                                     GroupName="ThemeSelection"
                                     Margin="{DynamicResource MarginSmall}"
                                     VerticalAlignment="Center"
                                     FontSize="{DynamicResource FontSizeSmall}"
                                     Foreground="{DynamicResource ForegroundBrush}"
                                     Opacity="0.8"/>
                    </StackPanel>

                    <TextBlock Text="{Binding CurrentTime}" 
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               FontSize="{DynamicResource FontSizeSmall}"
                               Foreground="{DynamicResource ForegroundSecondaryBrush}"
                               Opacity="0.6"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>