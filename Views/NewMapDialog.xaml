<Window x:Class="WWXMapEditor.Views.NewMapDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WWXMapEditor.Views"
        mc:Ignorable="d"
        Title="Create New Map"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,2">
            <StackPanel Margin="30,20">
                <TextBlock Text="CREATE NEW MAP" 
                           FontFamily="Consolas"
                           FontSize="48"
                           FontWeight="Bold"
                           Foreground="{DynamicResource ForegroundBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Configure your new map settings" 
                           FontFamily="Consolas"
                           FontSize="20"
                           Foreground="{DynamicResource ForegroundSecondaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Configuration Steps -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Step Navigation -->
            <Border Grid.Column="0" Background="{DynamicResource Surface2Brush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,2,0">
                <StackPanel Margin="20">
                    <TextBlock Text="CONFIGURATION STEPS" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               FontFamily="Consolas"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0,0,0,20"/>

                    <ItemsControl ItemsSource="{Binding ConfigurationSteps}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="StepBorder"
                                        Background="Transparent" 
                                        BorderThickness="0"
                                        Padding="20,15"
                                        Margin="0,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border x:Name="StepNumberBorder"
                                                Grid.Column="0"
                                                Width="25" Height="25"
                                                Background="{DynamicResource BorderBrush}"
                                                CornerRadius="12.5">
                                            <TextBlock x:Name="StepNumberText"
                                                       Text="{Binding Number}"
                                                       Foreground="{DynamicResource ForegroundBrush}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       FontWeight="Bold"/>
                                        </Border>

                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Title}" 
                                                   Foreground="{DynamicResource ForegroundBrush}" 
                                                   FontFamily="Consolas"
                                                   FontSize="16"
                                                   Margin="10,0,0,0"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                        <Setter TargetName="StepBorder" Property="Background" Value="{DynamicResource Surface3Brush}"/>
                                        <Setter TargetName="StepNumberBorder" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                        <Setter TargetName="StepNumberText" Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                        <Setter TargetName="StepNumberBorder" Property="Background" Value="{DynamicResource SuccessBrush}"/>
                                        <Setter TargetName="StepNumberText" Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Step Content -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ContentControl Margin="50" Content="{Binding CurrentStepContent}"/>
            </ScrollViewer>
        </Grid>

        <!-- Bottom Navigation -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,2,0,0">
            <Grid Margin="30,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Text="{Binding ProgressText}"
                               Foreground="{DynamicResource ForegroundSecondaryBrush}"
                               FontFamily="Consolas"
                               FontSize="16"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding ValidationMessage}"
                               Foreground="Red"
                               FontFamily="Consolas"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="PREVIOUS" 
                            Style="{StaticResource MenuButtonStyle}"
                            Width="150"
                            Height="50"
                            FontSize="18"
                            Margin="0,0,10,0"
                            Command="{Binding PreviousCommand}"
                            Visibility="{Binding PreviousButtonVisibility}"/>

                    <Button Content="{Binding NextButtonText}" 
                            Style="{StaticResource MenuButtonStyle}"
                            Width="150"
                            Height="50"
                            FontSize="18"
                            Margin="0,0,10,0"
                            Command="{Binding NextCommand}"/>

                    <Button Content="CANCEL" 
                            Style="{StaticResource MenuButtonStyle}"
                            Width="150"
                            Height="50"
                            FontSize="18"
                            Click="OnCancelClick"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>