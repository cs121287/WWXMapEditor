<UserControl x:Class="WWXMapEditor.Views.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WWXMapEditor.Views"
             xmlns:scaling="clr-namespace:WWXMapEditor.UI.Scaling"
             xmlns:conv="clr-namespace:WWXMapEditor.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <!-- Assumes a global MultiplyConverter is registered in App resources.
         If not, uncomment local resource:
    <UserControl.Resources>
        <conv:MultiplyConverter x:Key="MultiplyConverter"/>
    </UserControl.Resources>
    -->

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,2">
            <Grid Margin="20,15">
                <TextBlock Text="ABOUT" 
                           FontFamily="Consolas"
                           FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                              Converter={StaticResource MultiplyConverter}, ConverterParameter=36}"
                           FontWeight="Bold"
                           Foreground="{DynamicResource ForegroundBrush}"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                
                <Button Content="✕" 
                        HorizontalAlignment="Right"
                        Style="{StaticResource EditorButtonStyle}"
                        Width="40"
                        Height="40"
                        FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                           Converter={StaticResource MultiplyConverter}, ConverterParameter=20}"
                        Command="{Binding CloseCommand}"/>
            </Grid>
        </Border>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="50,30" HorizontalAlignment="Center" MaxWidth="600">
                <Image Source="/Resources/Images/Icons/app.ico" 
                       Width="128" 
                       Height="128" 
                       Margin="0,0,0,20"/>
                
                <TextBlock Text="WWX MAP EDITOR" 
                           FontFamily="Consolas"
                           FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                              Converter={StaticResource MultiplyConverter}, ConverterParameter=32}"
                           FontWeight="Bold"
                           Foreground="{DynamicResource ForegroundBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="Version 1.0.0" 
                           FontFamily="Consolas"
                           FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                              Converter={StaticResource MultiplyConverter}, ConverterParameter=16}"
                           Foreground="{DynamicResource ForegroundSecondaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>
                
                <TextBlock TextWrapping="Wrap"
                           FontFamily="Consolas"
                           FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                              Converter={StaticResource MultiplyConverter}, ConverterParameter=14}"
                           Foreground="{DynamicResource ForegroundBrush}"
                           LineHeight="20"
                           Margin="0,0,0,20">
                    <Run Text="WWX Map Editor is a powerful tool for creating and editing game maps. "/>
                    <Run Text="Built with modern technology and designed for ease of use, "/>
                    <Run Text="it provides all the features you need to bring your map ideas to life."/>
                </TextBlock>
                
                <TextBlock Text="Features:" 
                           FontFamily="Consolas"
                           FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                              Converter={StaticResource MultiplyConverter}, ConverterParameter=16}"
                           FontWeight="Bold"
                           Foreground="{DynamicResource ForegroundBrush}"
                           Margin="0,0,0,10"/>
                
                <TextBlock TextWrapping="Wrap"
                           FontFamily="Consolas"
                           FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                              Converter={StaticResource MultiplyConverter}, ConverterParameter=14}"
                           Foreground="{DynamicResource ForegroundBrush}"
                           LineHeight="20"
                           Margin="20,0,0,20">
                    <Run Text="• Intuitive map creation and editing"/>
                    <LineBreak/>
                    <Run Text="• Support for multiple terrain types"/>
                    <LineBreak/>
                    <Run Text="• Configurable victory conditions"/>
                    <LineBreak/>
                    <Run Text="• Fog of war settings"/>
                    <LineBreak/>
                    <Run Text="• Undo/Redo functionality"/>
                    <LineBreak/>
                    <Run Text="• And much more..."/>
                </TextBlock>
                
                <TextBlock Text="© 2025 WWX Map Editor Team" 
                           FontFamily="Consolas"
                           FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                              Converter={StaticResource MultiplyConverter}, ConverterParameter=12}"
                           Foreground="{DynamicResource ForegroundSecondaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,30,0,0"/>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Bottom Bar -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,2,0,0">
            <Button Content="CLOSE" 
                    Style="{StaticResource MenuButtonStyle}"
                    Width="120"
                    Height="40"
                    FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                       Converter={StaticResource MultiplyConverter}, ConverterParameter=16}"
                    Margin="20,15"
                    HorizontalAlignment="Right"
                    Command="{Binding CloseCommand}"/>
        </Border>
    </Grid>
</UserControl>