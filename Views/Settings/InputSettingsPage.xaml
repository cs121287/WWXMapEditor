<UserControl x:Class="WWXMapEditor.Views.Settings.InputSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WWXMapEditor.Views.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    
    <StackPanel>
        <TextBlock Text="INPUT SETTINGS" 
                   Foreground="White" 
                   FontFamily="Consolas"
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>
        
        <!-- Mouse Section -->
        <GroupBox Header="Mouse" Style="{StaticResource SettingsGroupBoxStyle}">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Mouse sensitivity:" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <Slider Grid.Column="1" 
                            Minimum="0.1" 
                            Maximum="5.0" 
                            Value="{Binding MouseSensitivity}"
                            TickFrequency="0.1"
                            IsSnapToTickEnabled="True"
                            Margin="0,0,10,0"/>
                    
                    <TextBlock Grid.Column="2" 
                               Text="{Binding MouseSensitivity, StringFormat=F1}" 
                               Foreground="White" 
                               Width="40"/>
                </Grid>
                
                <CheckBox Content="Invert mouse wheel zoom" 
                          IsChecked="{Binding InvertMouseWheelZoom}" 
                          Style="{StaticResource SettingsCheckBoxStyle}"
                          Margin="0,10,0,0"/>
                
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Middle mouse button action:" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <ComboBox Grid.Column="1" 
                              SelectedItem="{Binding MiddleMouseAction}" 
                              ItemsSource="{Binding MiddleMouseActions}"
                              Style="{StaticResource SettingsComboBoxStyle}"
                              Width="150"
                              HorizontalAlignment="Left"/>
                </Grid>
                
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Right-click action:" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <ComboBox Grid.Column="1" 
                              SelectedItem="{Binding RightClickAction}" 
                              ItemsSource="{Binding RightClickActions}"
                              Style="{StaticResource SettingsComboBoxStyle}"
                              Width="150"
                              HorizontalAlignment="Left"/>
                </Grid>
            </StackPanel>
        </GroupBox>
        
        <!-- Keyboard Shortcuts Section -->
        <GroupBox Header="Keyboard Shortcuts" Style="{StaticResource SettingsGroupBoxStyle}">
            <StackPanel>
                <DataGrid ItemsSource="{Binding KeyboardShortcuts}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          Background="#FF2a2a2a"
                          Foreground="White"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#FF555555"
                          BorderBrush="#FF555555"
                          Height="300">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#FF1a1a1a"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="BorderBrush" Value="#FF555555"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="Padding" Value="10,5"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Padding" Value="10,5"/>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Action" 
                                            Binding="{Binding Action}" 
                                            Width="*"
                                            IsReadOnly="True"/>
                        <DataGridTextColumn Header="Shortcut" 
                                            Binding="{Binding Shortcut}" 
                                            Width="150"/>
                        <DataGridTemplateColumn Header="Edit" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Edit" 
                                            Command="{Binding DataContext.EditShortcutCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource EditorButtonStyle}"
                                            Width="60"
                                            Height="25"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="Reset to Defaults" 
                            Command="{Binding ResetShortcutsCommand}"
                            Style="{StaticResource MenuButtonStyle}"
                            Width="150"
                            Height="35"
                            FontSize="14"
                            Margin="0,0,10,0"/>
                    
                    <Button Content="Import" 
                            Command="{Binding ImportShortcutsCommand}"
                            Style="{StaticResource MenuButtonStyle}"
                            Width="100"
                            Height="35"
                            FontSize="14"
                            Margin="0,0,10,0"/>
                    
                    <Button Content="Export" 
                            Command="{Binding ExportShortcutsCommand}"
                            Style="{StaticResource MenuButtonStyle}"
                            Width="100"
                            Height="35"
                            FontSize="14"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl>