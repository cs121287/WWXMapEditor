<UserControl x:Class="WWXMapEditor.Views.Settings.FileProjectSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WWXMapEditor.Views.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="FILE &amp; PROJECT SETTINGS" 
                   Foreground="White" 
                   FontFamily="Consolas"
                   FontSize="{DynamicResource FontSizeXXLarge}" 
                   FontWeight="Bold" 
                   Margin="{DynamicResource MarginLarge}"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column -->
            <StackPanel Grid.Column="0">
                <!-- Default Paths Section Part 1 -->
                <GroupBox Header="Project Paths" Style="{StaticResource SettingsGroupBoxStyle}">
                    <StackPanel>
                        <Grid Margin="{DynamicResource MarginMedium}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Projects:" 
                                       Foreground="White" 
                                       FontSize="{DynamicResource FontSizeMedium}"
                                       VerticalAlignment="Center"
                                       Margin="{DynamicResource MarginMedium}"/>

                            <TextBox Grid.Column="1" 
                                     Text="{Binding DefaultProjectDirectory}" 
                                     Style="{StaticResource SettingsTextBoxStyle}"
                                     Margin="{DynamicResource MarginMedium}"/>

                            <Button Grid.Column="2" 
                                    Content="Browse" 
                                    Command="{Binding BrowseProjectDirectoryCommand}"
                                    Style="{StaticResource EditorButtonStyle}"
                                    Width="70"/>
                        </Grid>

                        <Grid Margin="{DynamicResource MarginMedium}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Tilesets:" 
                                       Foreground="White" 
                                       FontSize="{DynamicResource FontSizeMedium}"
                                       VerticalAlignment="Center"
                                       Margin="{DynamicResource MarginMedium}"/>

                            <TextBox Grid.Column="1" 
                                     Text="{Binding DefaultTilesetDirectory}" 
                                     Style="{StaticResource SettingsTextBoxStyle}"
                                     Margin="{DynamicResource MarginMedium}"/>

                            <Button Grid.Column="2" 
                                    Content="Browse" 
                                    Command="{Binding BrowseTilesetDirectoryCommand}"
                                    Style="{StaticResource EditorButtonStyle}"
                                    Width="70"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Default Paths Section Part 2 -->
                <GroupBox Header="Export Paths" Style="{StaticResource SettingsGroupBoxStyle}">
                    <StackPanel>
                        <Grid Margin="{DynamicResource MarginMedium}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Exports:" 
                                       Foreground="White" 
                                       FontSize="{DynamicResource FontSizeMedium}"
                                       VerticalAlignment="Center"
                                       Margin="{DynamicResource MarginMedium}"/>

                            <TextBox Grid.Column="1" 
                                     Text="{Binding DefaultExportDirectory}" 
                                     Style="{StaticResource SettingsTextBoxStyle}"
                                     Margin="{DynamicResource MarginMedium}"/>

                            <Button Grid.Column="2" 
                                    Content="Browse" 
                                    Command="{Binding BrowseExportDirectoryCommand}"
                                    Style="{StaticResource EditorButtonStyle}"
                                    Width="70"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Templates:" 
                                       Foreground="White" 
                                       FontSize="{DynamicResource FontSizeMedium}"
                                       VerticalAlignment="Center"
                                       Margin="{DynamicResource MarginMedium}"/>

                            <TextBox Grid.Column="1" 
                                     Text="{Binding TemplatesDirectory}" 
                                     Style="{StaticResource SettingsTextBoxStyle}"
                                     Margin="{DynamicResource MarginMedium}"/>

                            <Button Grid.Column="2" 
                                    Content="Browse" 
                                    Command="{Binding BrowseTemplatesDirectoryCommand}"
                                    Style="{StaticResource EditorButtonStyle}"
                                    Width="70"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>

            <!-- Right Column -->
            <StackPanel Grid.Column="2">
                <!-- File Formats Section -->
                <GroupBox Header="File Formats" Style="{StaticResource SettingsGroupBoxStyle}">
                    <StackPanel>
                        <Grid Margin="{DynamicResource MarginMedium}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Save format:" 
                                       Foreground="White" 
                                       FontSize="{DynamicResource FontSizeMedium}"
                                       VerticalAlignment="Center"
                                       Margin="{DynamicResource MarginMedium}"/>

                            <ComboBox Grid.Column="1" 
                                      SelectedItem="{Binding DefaultSaveFormat}" 
                                      ItemsSource="{Binding SaveFormats}"
                                      Style="{StaticResource SettingsComboBoxStyle}"
                                      HorizontalAlignment="Stretch"/>
                        </Grid>

                        <Grid Margin="{DynamicResource MarginMedium}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Compression:" 
                                       Foreground="White" 
                                       FontSize="{DynamicResource FontSizeMedium}"
                                       VerticalAlignment="Center"
                                       Margin="{DynamicResource MarginMedium}"/>

                            <ComboBox Grid.Column="1" 
                                      SelectedItem="{Binding CompressionLevel}" 
                                      ItemsSource="{Binding CompressionLevels}"
                                      Style="{StaticResource SettingsComboBoxStyle}"
                                      HorizontalAlignment="Stretch"/>
                        </Grid>

                        <CheckBox Content="Include metadata in saves" 
                                  IsChecked="{Binding IncludeMetadata}" 
                                  Style="{StaticResource SettingsCheckBoxStyle}"
                                  Margin="{DynamicResource MarginMedium}"/>

                        <CheckBox Content="Backup files on save" 
                                  IsChecked="{Binding BackupOnSave}" 
                                  Style="{StaticResource SettingsCheckBoxStyle}"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>