<UserControl x:Class="WWXMapEditor.Views.Settings.FileProjectSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WWXMapEditor.Views.Settings"
             xmlns:scaling="clr-namespace:WWXMapEditor.UI.Scaling"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="FILE &amp; PROJECT SETTINGS" 
                   Foreground="{DynamicResource ForegroundBrush}" 
                   FontFamily="Consolas"
                   FontWeight="Bold" 
                   Margin="{DynamicResource MarginLarge}">
            <TextBlock.FontSize>
                <Binding Source="{x:Static scaling:ScaleService.Instance}"
                         Path="FontScale"
                         Converter="{StaticResource MultiplyConverter}"
                         ConverterParameter="{StaticResource BaseFontSizeXXLarge}"/>
            </TextBlock.FontSize>
        </TextBlock>

        <!-- Grid with two columns and two rows: Project Paths | Export Paths on row 0, File Formats spans row 1 -->
        <Grid Grid.Row="1" Margin="{DynamicResource MarginLarge}" Grid.IsSharedSizeScope="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Project Paths -->
            <GroupBox Grid.Row="0" Grid.Column="0"
                      Header="Project Paths" Style="{StaticResource SettingsGroupBoxStyle}" Margin="0,0,12,12">
                <StackPanel>
                    <Grid Margin="{DynamicResource MarginMedium}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="100"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Projects:" 
                                   Foreground="{DynamicResource ForegroundBrush}" 
                                   FontSize="{DynamicResource FontSizeMedium}"
                                   VerticalAlignment="Center"
                                   Margin="{DynamicResource MarginMedium}"/>

                        <TextBox Grid.Column="1" 
                                 Text="{Binding DefaultProjectDirectory}" 
                                 Style="{StaticResource SettingsTextBoxStyle}"
                                 Margin="{DynamicResource MarginMedium}"/>

                        <Button Grid.Column="2" 
                                Content="Browse" 
                                Command="{Binding BrowseProjectDirectoryCommand}"
                                Style="{StaticResource EditorButtonStyle}"
                                Width="70"/>
                    </Grid>

                    <Grid Margin="{DynamicResource MarginMedium}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="100"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Tilesets:" 
                                   Foreground="{DynamicResource ForegroundBrush}" 
                                   FontSize="{DynamicResource FontSizeMedium}"
                                   VerticalAlignment="Center"
                                   Margin="{DynamicResource MarginMedium}"/>

                        <TextBox Grid.Column="1" 
                                 Text="{Binding DefaultTilesetDirectory}" 
                                 Style="{StaticResource SettingsTextBoxStyle}"
                                 Margin="{DynamicResource MarginMedium}"/>

                        <Button Grid.Column="2" 
                                Content="Browse" 
                                Command="{Binding BrowseTilesetDirectoryCommand}"
                                Style="{StaticResource EditorButtonStyle}"
                                Width="70"/>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- Export Paths -->
            <GroupBox Grid.Row="0" Grid.Column="1"
                      Header="Export Paths" Style="{StaticResource SettingsGroupBoxStyle}" Margin="12,0,0,12">
                <StackPanel>
                    <Grid Margin="{DynamicResource MarginMedium}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="100"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Exports:" 
                                   Foreground="{DynamicResource ForegroundBrush}" 
                                   FontSize="{DynamicResource FontSizeMedium}"
                                   VerticalAlignment="Center"
                                   Margin="{DynamicResource MarginMedium}"/>

                        <TextBox Grid.Column="1" 
                                 Text="{Binding DefaultExportDirectory}" 
                                 Style="{StaticResource SettingsTextBoxStyle}"
                                 Margin="{DynamicResource MarginMedium}"/>

                        <Button Grid.Column="2" 
                                Content="Browse" 
                                Command="{Binding BrowseExportDirectoryCommand}"
                                Style="{StaticResource EditorButtonStyle}"
                                Width="70"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="100"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Templates:" 
                                   Foreground="{DynamicResource ForegroundBrush}" 
                                   FontSize="{DynamicResource FontSizeMedium}"
                                   VerticalAlignment="Center"
                                   Margin="{DynamicResource MarginMedium}"/>

                        <TextBox Grid.Column="1" 
                                 Text="{Binding TemplatesDirectory}" 
                                 Style="{StaticResource SettingsTextBoxStyle}"
                                 Margin="{DynamicResource MarginMedium}"/>

                        <Button Grid.Column="2" 
                                Content="Browse" 
                                Command="{Binding BrowseTemplatesDirectoryCommand}"
                                Style="{StaticResource EditorButtonStyle}"
                                Width="70"/>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- File Formats (span both columns) -->
            <GroupBox Grid.Row="1" Grid.ColumnSpan="2"
                      Header="File Formats" Style="{StaticResource SettingsGroupBoxStyle}">
                <StackPanel>
                    <Grid Margin="{DynamicResource MarginMedium}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Save format:" 
                                   Foreground="{DynamicResource ForegroundBrush}" 
                                   FontSize="{DynamicResource FontSizeMedium}"
                                   VerticalAlignment="Center"
                                   Margin="{DynamicResource MarginMedium}"/>

                        <ComboBox Grid.Column="1" 
                                  SelectedItem="{Binding DefaultSaveFormat}" 
                                  ItemsSource="{Binding SaveFormats}"
                                  Style="{StaticResource SettingsComboBoxStyle}"
                                  HorizontalAlignment="Stretch"/>
                    </Grid>

                    <Grid Margin="{DynamicResource MarginMedium}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Compression:" 
                                   Foreground="{DynamicResource ForegroundBrush}" 
                                   FontSize="{DynamicResource FontSizeMedium}"
                                   VerticalAlignment="Center"
                                   Margin="{DynamicResource MarginMedium}"/>

                        <ComboBox Grid.Column="1" 
                                  SelectedItem="{Binding CompressionLevel}" 
                                  ItemsSource="{Binding CompressionLevels}"
                                  Style="{StaticResource SettingsComboBoxStyle}"
                                  HorizontalAlignment="Stretch"/>
                    </Grid>

                    <CheckBox Content="Include metadata in saves" 
                              IsChecked="{Binding IncludeMetadata}" 
                              Style="{StaticResource SettingsCheckBoxStyle}"
                              Margin="{DynamicResource MarginMedium}"/>

                    <CheckBox Content="Backup files on save" 
                              IsChecked="{Binding BackupOnSave}" 
                              Style="{StaticResource SettingsCheckBoxStyle}"/>
                </StackPanel>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>