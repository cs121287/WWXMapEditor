<UserControl x:Class="WWXMapEditor.Views.Settings.FileProjectSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WWXMapEditor.Views.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    
    <StackPanel>
        <TextBlock Text="FILE &amp; PROJECT SETTINGS" 
                   Foreground="White" 
                   FontFamily="Consolas"
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>
        
        <!-- Default Paths Section -->
        <GroupBox Header="Default Paths" Style="{StaticResource SettingsGroupBoxStyle}">
            <StackPanel>
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Default project directory:" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <TextBox Grid.Column="1" 
                             Text="{Binding DefaultProjectDirectory}" 
                             Style="{StaticResource SettingsTextBoxStyle}"
                             Margin="0,0,10,0"/>
                    
                    <Button Grid.Column="2" 
                            Content="Browse..." 
                            Command="{Binding BrowseProjectDirectoryCommand}"
                            Style="{StaticResource EditorButtonStyle}"
                            Width="80"/>
                </Grid>
                
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Default tileset directory:" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <TextBox Grid.Column="1" 
                             Text="{Binding DefaultTilesetDirectory}" 
                             Style="{StaticResource SettingsTextBoxStyle}"
                             Margin="0,0,10,0"/>
                    
                    <Button Grid.Column="2" 
                            Content="Browse..." 
                            Command="{Binding BrowseTilesetDirectoryCommand}"
                            Style="{StaticResource EditorButtonStyle}"
                            Width="80"/>
                </Grid>
                
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Default export directory:" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <TextBox Grid.Column="1" 
                             Text="{Binding DefaultExportDirectory}" 
                             Style="{StaticResource SettingsTextBoxStyle}"
                             Margin="0,0,10,0"/>
                    
                    <Button Grid.Column="2" 
                            Content="Browse..." 
                            Command="{Binding BrowseExportDirectoryCommand}"
                            Style="{StaticResource EditorButtonStyle}"
                            Width="80"/>
                </Grid>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Templates directory:" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <TextBox Grid.Column="1" 
                             Text="{Binding TemplatesDirectory}" 
                             Style="{StaticResource SettingsTextBoxStyle}"
                             Margin="0,0,10,0"/>
                    
                    <Button Grid.Column="2" 
                            Content="Browse..." 
                            Command="{Binding BrowseTemplatesDirectoryCommand}"
                            Style="{StaticResource EditorButtonStyle}"
                            Width="80"/>
                </Grid>
            </StackPanel>
        </GroupBox>
        
        <!-- File Formats Section -->
        <GroupBox Header="File Formats" Style="{StaticResource SettingsGroupBoxStyle}">
            <StackPanel>
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Default save format:" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <ComboBox Grid.Column="1" 
                              SelectedItem="{Binding DefaultSaveFormat}" 
                              ItemsSource="{Binding SaveFormats}"
                              Style="{StaticResource SettingsComboBoxStyle}"
                              Width="150"
                              HorizontalAlignment="Left"/>
                </Grid>
                
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Compression level:" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <ComboBox Grid.Column="1" 
                              SelectedItem="{Binding CompressionLevel}" 
                              ItemsSource="{Binding CompressionLevels}"
                              Style="{StaticResource SettingsComboBoxStyle}"
                              Width="150"
                              HorizontalAlignment="Left"/>
                </Grid>
                
                <CheckBox Content="Include metadata in saves" 
                          IsChecked="{Binding IncludeMetadata}" 
                          Style="{StaticResource SettingsCheckBoxStyle}"
                          Margin="0,0,0,10"/>
                
                <CheckBox Content="Backup files on save" 
                          IsChecked="{Binding BackupOnSave}" 
                          Style="{StaticResource SettingsCheckBoxStyle}"/>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl>