<UserControl x:Class="WWXMapEditor.Views.Settings.DisplaySettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WWXMapEditor.Views.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    
    <StackPanel>
        <TextBlock Text="DISPLAY SETTINGS" 
                   Foreground="White" 
                   FontFamily="Consolas"
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>
        
        <!-- Window Section -->
        <GroupBox Header="Window" Style="{StaticResource SettingsGroupBoxStyle}">
            <StackPanel>
                <CheckBox Content="Start in fullscreen" 
                          IsChecked="{Binding StartInFullscreen}" 
                          Style="{StaticResource SettingsCheckBoxStyle}"/>
                
                <CheckBox Content="Remember window position" 
                          IsChecked="{Binding RememberWindowPosition}" 
                          Style="{StaticResource SettingsCheckBoxStyle}"
                          Margin="0,10,0,0"/>
                
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Multiple monitor behavior:" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <ComboBox Grid.Column="1" 
                              SelectedItem="{Binding MultiMonitorBehavior}" 
                              ItemsSource="{Binding MultiMonitorBehaviors}"
                              Style="{StaticResource SettingsComboBoxStyle}"
                              Width="200"
                              HorizontalAlignment="Left"/>
                </Grid>
            </StackPanel>
        </GroupBox>
        
        <!-- UI Scale Section -->
        <GroupBox Header="UI Scale" Style="{StaticResource SettingsGroupBoxStyle}">
            <StackPanel>
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="UI scaling:" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <ComboBox Grid.Column="1" 
                              SelectedItem="{Binding UIScaling}" 
                              ItemsSource="{Binding UIScalings}"
                              Style="{StaticResource SettingsComboBoxStyle}"
                              Width="150"
                              HorizontalAlignment="Left"/>
                </Grid>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Font size:" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <ComboBox Grid.Column="1" 
                              SelectedItem="{Binding FontSize}" 
                              ItemsSource="{Binding FontSizes}"
                              Style="{StaticResource SettingsComboBoxStyle}"
                              Width="150"
                              HorizontalAlignment="Left"/>
                </Grid>
            </StackPanel>
        </GroupBox>
        
        <!-- Tooltips Section -->
        <GroupBox Header="Tooltips" Style="{StaticResource SettingsGroupBoxStyle}">
            <StackPanel>
                <CheckBox Content="Show tooltips" 
                          IsChecked="{Binding ShowTooltips}" 
                          Style="{StaticResource SettingsCheckBoxStyle}"/>
                
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Tooltip delay (milliseconds):" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <Slider Grid.Column="1" 
                            Minimum="0" 
                            Maximum="2000" 
                            Value="{Binding TooltipDelay}"
                            TickFrequency="100"
                            IsSnapToTickEnabled="True"
                            IsEnabled="{Binding ShowTooltips}"
                            Margin="0,0,10,0"/>
                    
                    <TextBlock Grid.Column="2" 
                               Text="{Binding TooltipDelay}" 
                               Foreground="White" 
                               Width="50"/>
                </Grid>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl>