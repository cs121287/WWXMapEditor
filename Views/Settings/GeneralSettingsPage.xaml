<UserControl x:Class="WWXMapEditor.Views.Settings.GeneralSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WWXMapEditor.Views.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    
    <StackPanel>
        <TextBlock Text="GENERAL SETTINGS" 
                   Foreground="White" 
                   FontFamily="Consolas"
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>
        
        <!-- Theme Section -->
        <GroupBox Header="Theme" Style="{StaticResource SettingsGroupBoxStyle}">
            <StackPanel>
                <RadioButton Content="Dark Mode" 
                             IsChecked="{Binding IsDarkMode}" 
                             Style="{StaticResource SettingsRadioButtonStyle}"/>
                <RadioButton Content="Light Mode" 
                             IsChecked="{Binding IsLightMode}" 
                             Style="{StaticResource SettingsRadioButtonStyle}"/>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <RadioButton Content="Custom Theme" 
                                 IsChecked="{Binding IsCustomTheme}" 
                                 Style="{StaticResource SettingsRadioButtonStyle}"/>
                    <Rectangle Width="30" Height="20" 
                               Fill="{Binding CustomThemeColor}" 
                               Stroke="White" 
                               StrokeThickness="1" 
                               Margin="10,0,0,0"
                               Cursor="Hand">
                        <Rectangle.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding PickColorCommand}"/>
                        </Rectangle.InputBindings>
                    </Rectangle>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        
        <!-- Language Section -->
        <GroupBox Header="Language" Style="{StaticResource SettingsGroupBoxStyle}">
            <ComboBox SelectedItem="{Binding SelectedLanguage}" 
                      ItemsSource="{Binding AvailableLanguages}"
                      Style="{StaticResource SettingsComboBoxStyle}"/>
        </GroupBox>
        
        <!-- Auto-save Section -->
        <GroupBox Header="Auto-save" Style="{StaticResource SettingsGroupBoxStyle}">
            <StackPanel>
                <CheckBox Content="Enable auto-save" 
                          IsChecked="{Binding AutoSaveEnabled}" 
                          Style="{StaticResource SettingsCheckBoxStyle}"/>
                
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Auto-save interval (minutes):" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <ComboBox Grid.Column="1" 
                              SelectedItem="{Binding AutoSaveInterval}" 
                              ItemsSource="{Binding AutoSaveIntervals}"
                              IsEnabled="{Binding AutoSaveEnabled}"
                              Style="{StaticResource SettingsComboBoxStyle}"
                              Width="100"
                              HorizontalAlignment="Left"/>
                </Grid>
                
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Auto-save location:" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <TextBox Grid.Column="1" 
                             Text="{Binding AutoSaveLocation}" 
                             IsEnabled="{Binding AutoSaveEnabled}"
                             Style="{StaticResource SettingsTextBoxStyle}"
                             Margin="0,0,10,0"/>
                    
                    <Button Grid.Column="2" 
                            Content="Browse..." 
                            Command="{Binding BrowseAutoSaveLocationCommand}"
                            IsEnabled="{Binding AutoSaveEnabled}"
                            Style="{StaticResource EditorButtonStyle}"
                            Width="80"/>
                </Grid>
            </StackPanel>
        </GroupBox>
        
        <!-- Recent Files Section -->
        <GroupBox Header="Recent Files" Style="{StaticResource SettingsGroupBoxStyle}">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Number of recent files to show:" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <ComboBox Grid.Column="1" 
                              SelectedItem="{Binding RecentFilesCount}" 
                              ItemsSource="{Binding RecentFilesCounts}"
                              Style="{StaticResource SettingsComboBoxStyle}"
                              Width="100"
                              HorizontalAlignment="Left"/>
                </Grid>
                
                <Button Content="Clear Recent Files History" 
                        Command="{Binding ClearRecentFilesCommand}"
                        Style="{StaticResource MenuButtonStyle}"
                        Width="250"
                        Height="35"
                        FontSize="14"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Left"/>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl>