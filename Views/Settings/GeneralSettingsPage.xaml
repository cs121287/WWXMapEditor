<UserControl x:Class="WWXMapEditor.Views.Settings.GeneralSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WWXMapEditor.Views.Settings"
             xmlns:scaling="clr-namespace:WWXMapEditor.UI.Scaling"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="GENERAL SETTINGS" 
                   Foreground="{DynamicResource ForegroundBrush}" 
                   FontFamily="Consolas"
                   FontWeight="Bold" 
                   Margin="{DynamicResource MarginLarge}">
            <TextBlock.FontSize>
                <Binding Source="{x:Static scaling:ScaleService.Instance}"
                         Path="FontScale"
                         Converter="{StaticResource MultiplyConverter}"
                         ConverterParameter="{StaticResource BaseFontSizeXXLarge}"/>
            </TextBlock.FontSize>
        </TextBlock>

        <!-- Two columns: Theme + Language | Auto-save + Recent Files -->
        <UniformGrid Grid.Row="1" Columns="2" HorizontalAlignment="Stretch" Margin="{DynamicResource MarginLarge}">
            <StackPanel Margin="0,0,12,0">
                <!-- Theme Section -->
                <GroupBox Header="Theme" Style="{StaticResource SettingsGroupBoxStyle}" Margin="0,0,0,12">
                    <StackPanel>
                        <RadioButton Content="Dark Mode" 
                                     IsChecked="{Binding IsDarkMode}" 
                                     Style="{StaticResource SettingsRadioButtonStyle}"/>
                        <RadioButton Content="Light Mode" 
                                     IsChecked="{Binding IsLightMode}" 
                                     Style="{StaticResource SettingsRadioButtonStyle}"/>
                        <StackPanel Orientation="Horizontal" Margin="{DynamicResource MarginMedium}">
                            <RadioButton Content="Custom Theme" 
                                         IsChecked="{Binding IsCustomTheme}" 
                                         Style="{StaticResource SettingsRadioButtonStyle}"/>
                            <Rectangle Width="30" Height="20" 
                                       Fill="{Binding CustomThemeColor}" 
                                       Stroke="{DynamicResource ForegroundBrush}" 
                                       StrokeThickness="1" 
                                       Margin="{DynamicResource MarginMedium}"
                                       Cursor="Hand">
                                <Rectangle.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" Command="{Binding PickColorCommand}"/>
                                </Rectangle.InputBindings>
                            </Rectangle>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Language Section -->
                <GroupBox Header="Language" Style="{StaticResource SettingsGroupBoxStyle}">
                    <ComboBox SelectedItem="{Binding SelectedLanguage}" 
                              ItemsSource="{Binding AvailableLanguages}"
                              Style="{StaticResource SettingsComboBoxStyle}"/>
                </GroupBox>
            </StackPanel>

            <StackPanel Margin="12,0,0,0">
                <!-- Auto-save Section -->
                <GroupBox Header="Auto-save" Style="{StaticResource SettingsGroupBoxStyle}" Margin="0,0,0,12">
                    <StackPanel>
                        <CheckBox Content="Enable auto-save" 
                                  IsChecked="{Binding AutoSaveEnabled}" 
                                  Style="{StaticResource SettingsCheckBoxStyle}"/>

                        <Grid Margin="{DynamicResource MarginMedium}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Interval (min):" 
                                       Foreground="{DynamicResource ForegroundBrush}" 
                                       FontSize="{DynamicResource FontSizeMedium}"
                                       VerticalAlignment="Center"
                                       Margin="{DynamicResource MarginMedium}"/>

                            <ComboBox Grid.Column="1" 
                                      SelectedItem="{Binding AutoSaveInterval}" 
                                      ItemsSource="{Binding AutoSaveIntervals}"
                                      IsEnabled="{Binding AutoSaveEnabled}"
                                      Style="{StaticResource SettingsComboBoxStyle}"
                                      Width="100"
                                      HorizontalAlignment="Left"/>
                        </Grid>

                        <Grid Margin="{DynamicResource MarginMedium}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Location:" 
                                       Foreground="{DynamicResource ForegroundBrush}" 
                                       FontSize="{DynamicResource FontSizeMedium}"
                                       VerticalAlignment="Center"
                                       Margin="{DynamicResource MarginMedium}"/>

                            <TextBox Grid.Column="1" 
                                     Text="{Binding AutoSaveLocation}" 
                                     IsEnabled="{Binding AutoSaveEnabled}"
                                     Style="{StaticResource SettingsTextBoxStyle}"
                                     Margin="{DynamicResource MarginMedium}"/>

                            <Button Grid.Column="2" 
                                    Content="Browse..." 
                                    Command="{Binding BrowseAutoSaveLocationCommand}"
                                    IsEnabled="{Binding AutoSaveEnabled}"
                                    Style="{DynamicResource EditorButtonStyle}"
                                    Width="80"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Recent Files Section -->
                <GroupBox Header="Recent Files" Style="{StaticResource SettingsGroupBoxStyle}">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Files to show:" 
                                       Foreground="{DynamicResource ForegroundBrush}" 
                                       FontSize="{DynamicResource FontSizeMedium}"
                                       VerticalAlignment="Center"
                                       Margin="{DynamicResource MarginMedium}"/>

                            <ComboBox Grid.Column="1" 
                                      SelectedItem="{Binding RecentFilesCount}" 
                                      ItemsSource="{Binding RecentFilesCounts}"
                                      Style="{StaticResource SettingsComboBoxStyle}"
                                      Width="100"
                                      HorizontalAlignment="Left"/>
                        </Grid>

                        <Button Content="Clear Recent Files History" 
                                Command="{Binding ClearRecentFilesCommand}"
                                Style="{StaticResource MenuButtonStyle}"
                                Width="250"
                                Height="{DynamicResource ScaledEditorButtonSize}"
                                FontSize="{DynamicResource FontSizeMedium}"
                                Margin="{DynamicResource MarginMedium}"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </UniformGrid>
    </Grid>
</UserControl>