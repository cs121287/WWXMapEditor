<UserControl x:Class="WWXMapEditor.Views.Settings.AdvancedSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WWXMapEditor.Views.Settings"
             xmlns:scaling="clr-namespace:WWXMapEditor.UI.Scaling"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="ADVANCED SETTINGS" 
                   Foreground="{DynamicResource ForegroundBrush}" 
                   FontFamily="Consolas"
                   FontWeight="Bold" 
                   Margin="{DynamicResource MarginLarge}">
            <TextBlock.FontSize>
                <Binding Source="{x:Static scaling:ScaleService.Instance}"
                         Path="FontScale"
                         Converter="{StaticResource MultiplyConverter}"
                         ConverterParameter="{StaticResource BaseFontSizeXXLarge}"/>
            </TextBlock.FontSize>
        </TextBlock>

        <!-- Two equal columns to avoid vertical scrolling where possible -->
        <UniformGrid Grid.Row="1" Columns="2" HorizontalAlignment="Stretch" Margin="{DynamicResource MarginLarge}">
            <!-- Debugging Section -->
            <GroupBox Header="Debugging" Style="{StaticResource SettingsGroupBoxStyle}" Margin="0,0,12,0">
                <StackPanel>
                    <CheckBox Content="Show FPS counter" 
                              IsChecked="{Binding ShowFPSCounter}" 
                              Style="{StaticResource SettingsCheckBoxStyle}"/>

                    <CheckBox Content="Show memory usage" 
                              IsChecked="{Binding ShowMemoryUsage}" 
                              Style="{StaticResource SettingsCheckBoxStyle}"
                              Margin="{DynamicResource MarginMedium}"/>

                    <CheckBox Content="Enable debug console" 
                              IsChecked="{Binding EnableDebugConsole}" 
                              Style="{StaticResource SettingsCheckBoxStyle}"
                              Margin="{DynamicResource MarginMedium}"/>

                    <Grid Margin="{DynamicResource MarginMedium}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Log level:" 
                                   Foreground="{DynamicResource ForegroundBrush}" 
                                   FontSize="{DynamicResource FontSizeMedium}"
                                   VerticalAlignment="Center"
                                   Margin="{DynamicResource MarginMedium}"/>

                        <ComboBox Grid.Column="1" 
                                  SelectedItem="{Binding LogLevel}" 
                                  ItemsSource="{Binding LogLevels}"
                                  Style="{StaticResource SettingsComboBoxStyle}"
                                  HorizontalAlignment="Stretch"/>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- Plugins Section -->
            <GroupBox Header="Plugins" 
                      Style="{StaticResource SettingsGroupBoxStyle}"
                      Margin="12,0,0,0">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top">
                        <CheckBox Content="Enable plugins" 
                                  IsChecked="{Binding EnablePlugins}" 
                                  Style="{StaticResource SettingsCheckBoxStyle}"/>

                        <Grid Margin="{DynamicResource MarginMedium}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Directory:" 
                                       Foreground="{DynamicResource ForegroundBrush}" 
                                       FontSize="{DynamicResource FontSizeMedium}"
                                       VerticalAlignment="Center"
                                       Margin="{DynamicResource MarginMedium}"/>

                            <TextBox Grid.Column="1" 
                                     Text="{Binding PluginDirectory}" 
                                     IsEnabled="{Binding EnablePlugins}"
                                     Style="{StaticResource SettingsTextBoxStyle}"
                                     Margin="{DynamicResource MarginMedium}"/>

                            <Button Grid.Column="2" 
                                    Content="Browse" 
                                    Command="{Binding BrowsePluginDirectoryCommand}"
                                    IsEnabled="{Binding EnablePlugins}"
                                    Style="{StaticResource EditorButtonStyle}"
                                    Width="70"/>
                        </Grid>

                        <TextBlock Text="Installed Plugins:" 
                                   Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                                   FontSize="{DynamicResource FontSizeMedium}"
                                   Margin="{DynamicResource MarginMedium}"/>
                    </StackPanel>

                    <Border BorderBrush="{DynamicResource BorderBrush}" 
                            BorderThickness="1" 
                            Background="{DynamicResource Surface2Brush}"
                            MinHeight="150"
                            MaxHeight="300"
                            DockPanel.Dock="Top">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding InstalledPlugins}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="{DynamicResource BorderBrush}" 
                                                BorderThickness="0,0,0,1" 
                                                Padding="{DynamicResource PaddingMedium}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <CheckBox Grid.Column="0" 
                                                          IsChecked="{Binding IsEnabled}" 
                                                          Margin="{DynamicResource MarginMedium}"/>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Name}" 
                                                               Foreground="{DynamicResource ForegroundBrush}" 
                                                               FontSize="{DynamicResource FontSizeMedium}"
                                                               FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding Description}" 
                                                               Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                                                               FontSize="{DynamicResource FontSizeSmall}"
                                                               TextWrapping="Wrap"/>
                                                </StackPanel>

                                                <TextBlock Grid.Column="2" 
                                                           Text="{Binding Version}" 
                                                           Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                                                           FontSize="{DynamicResource FontSizeSmall}"
                                                           VerticalAlignment="Center"
                                                           Margin="5,0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </DockPanel>
            </GroupBox>
        </UniformGrid>
    </Grid>
</UserControl>