<UserControl x:Class="WWXMapEditor.Views.Settings.AdvancedSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WWXMapEditor.Views.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    
    <StackPanel>
        <TextBlock Text="ADVANCED SETTINGS" 
                   Foreground="White" 
                   FontFamily="Consolas"
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>
        
        <!-- Debugging Section -->
        <GroupBox Header="Debugging" Style="{StaticResource SettingsGroupBoxStyle}">
            <StackPanel>
                <CheckBox Content="Show FPS counter" 
                          IsChecked="{Binding ShowFPSCounter}" 
                          Style="{StaticResource SettingsCheckBoxStyle}"/>
                
                <CheckBox Content="Show memory usage" 
                          IsChecked="{Binding ShowMemoryUsage}" 
                          Style="{StaticResource SettingsCheckBoxStyle}"
                          Margin="0,10,0,0"/>
                
                <CheckBox Content="Enable debug console" 
                          IsChecked="{Binding EnableDebugConsole}" 
                          Style="{StaticResource SettingsCheckBoxStyle}"
                          Margin="0,10,0,0"/>
                
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Log level:" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <ComboBox Grid.Column="1" 
                              SelectedItem="{Binding LogLevel}" 
                              ItemsSource="{Binding LogLevels}"
                              Style="{StaticResource SettingsComboBoxStyle}"
                              Width="150"
                              HorizontalAlignment="Left"/>
                </Grid>
            </StackPanel>
        </GroupBox>
        
        <!-- Plugins Section -->
        <GroupBox Header="Plugins" Style="{StaticResource SettingsGroupBoxStyle}">
            <StackPanel>
                <CheckBox Content="Enable plugins" 
                          IsChecked="{Binding EnablePlugins}" 
                          Style="{StaticResource SettingsCheckBoxStyle}"/>
                
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Plugin directory:" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <TextBox Grid.Column="1" 
                             Text="{Binding PluginDirectory}" 
                             IsEnabled="{Binding EnablePlugins}"
                             Style="{StaticResource SettingsTextBoxStyle}"
                             Margin="0,0,10,0"/>
                    
                    <Button Grid.Column="2" 
                            Content="Browse..." 
                            Command="{Binding BrowsePluginDirectoryCommand}"
                            IsEnabled="{Binding EnablePlugins}"
                            Style="{StaticResource EditorButtonStyle}"
                            Width="80"/>
                </Grid>
                
                <TextBlock Text="Installed Plugins:" 
                           Foreground="White" 
                           Margin="0,10,0,5"/>
                
                <Border BorderBrush="#FF555555" 
                        BorderThickness="1" 
                        Background="#FF1a1a1a"
                        Height="150">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding InstalledPlugins}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#FF555555" 
                                            BorderThickness="0,0,0,1" 
                                            Padding="10,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <CheckBox Grid.Column="0" 
                                                      IsChecked="{Binding IsEnabled}" 
                                                      Margin="0,0,10,0"/>
                                            
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Name}" 
                                                           Foreground="White" 
                                                           FontWeight="Bold"/>
                                                <TextBlock Text="{Binding Description}" 
                                                           Foreground="Gray" 
                                                           FontSize="12"/>
                                            </StackPanel>
                                            
                                            <TextBlock Grid.Column="2" 
                                                       Text="{Binding Version}" 
                                                       Foreground="Gray" 
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl>