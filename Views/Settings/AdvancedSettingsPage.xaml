<UserControl x:Class="WWXMapEditor.Views.Settings.AdvancedSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WWXMapEditor.Views.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="ADVANCED SETTINGS" 
                   Foreground="White" 
                   FontFamily="Consolas"
                   FontSize="{DynamicResource FontSizeXXLarge}" 
                   FontWeight="Bold" 
                   Margin="{DynamicResource MarginLarge}"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column -->
            <StackPanel Grid.Column="0">
                <!-- Debugging Section -->
                <GroupBox Header="Debugging" Style="{StaticResource SettingsGroupBoxStyle}">
                    <StackPanel>
                        <CheckBox Content="Show FPS counter" 
                                  IsChecked="{Binding ShowFPSCounter}" 
                                  Style="{StaticResource SettingsCheckBoxStyle}"/>

                        <CheckBox Content="Show memory usage" 
                                  IsChecked="{Binding ShowMemoryUsage}" 
                                  Style="{StaticResource SettingsCheckBoxStyle}"
                                  Margin="{DynamicResource MarginMedium}"/>

                        <CheckBox Content="Enable debug console" 
                                  IsChecked="{Binding EnableDebugConsole}" 
                                  Style="{StaticResource SettingsCheckBoxStyle}"
                                  Margin="{DynamicResource MarginMedium}"/>

                        <Grid Margin="{DynamicResource MarginMedium}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Log level:" 
                                       Foreground="White" 
                                       FontSize="{DynamicResource FontSizeMedium}"
                                       VerticalAlignment="Center"
                                       Margin="{DynamicResource MarginMedium}"/>

                            <ComboBox Grid.Column="1" 
                                      SelectedItem="{Binding LogLevel}" 
                                      ItemsSource="{Binding LogLevels}"
                                      Style="{StaticResource SettingsComboBoxStyle}"
                                      HorizontalAlignment="Stretch"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>

            <!-- Right Column -->
            <DockPanel Grid.Column="2">
                <!-- Plugins Section -->
                <GroupBox Header="Plugins" 
                          Style="{StaticResource SettingsGroupBoxStyle}"
                          DockPanel.Dock="Top">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Top">
                            <CheckBox Content="Enable plugins" 
                                      IsChecked="{Binding EnablePlugins}" 
                                      Style="{StaticResource SettingsCheckBoxStyle}"/>

                            <Grid Margin="{DynamicResource MarginMedium}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Directory:" 
                                           Foreground="White" 
                                           FontSize="{DynamicResource FontSizeMedium}"
                                           VerticalAlignment="Center"
                                           Margin="{DynamicResource MarginMedium}"/>

                                <TextBox Grid.Column="1" 
                                         Text="{Binding PluginDirectory}" 
                                         IsEnabled="{Binding EnablePlugins}"
                                         Style="{StaticResource SettingsTextBoxStyle}"
                                         Margin="{DynamicResource MarginMedium}"/>

                                <Button Grid.Column="2" 
                                        Content="Browse" 
                                        Command="{Binding BrowsePluginDirectoryCommand}"
                                        IsEnabled="{Binding EnablePlugins}"
                                        Style="{StaticResource EditorButtonStyle}"
                                        Width="70"/>
                            </Grid>

                            <TextBlock Text="Installed Plugins:" 
                                       Foreground="White" 
                                       FontSize="{DynamicResource FontSizeMedium}"
                                       Margin="{DynamicResource MarginMedium}"/>
                        </StackPanel>

                        <Border BorderBrush="#FF555555" 
                                BorderThickness="1" 
                                Background="#FF1a1a1a"
                                MinHeight="150"
                                MaxHeight="300"
                                DockPanel.Dock="Top">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding InstalledPlugins}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#FF555555" 
                                                    BorderThickness="0,0,0,1" 
                                                    Padding="{DynamicResource PaddingMedium}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <CheckBox Grid.Column="0" 
                                                              IsChecked="{Binding IsEnabled}" 
                                                              Margin="{DynamicResource MarginMedium}"/>

                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding Name}" 
                                                                   Foreground="White" 
                                                                   FontSize="{DynamicResource FontSizeMedium}"
                                                                   FontWeight="Bold"/>
                                                        <TextBlock Text="{Binding Description}" 
                                                                   Foreground="Gray" 
                                                                   FontSize="{DynamicResource FontSizeSmall}"
                                                                   TextWrapping="Wrap"/>
                                                    </StackPanel>

                                                    <TextBlock Grid.Column="2" 
                                                               Text="{Binding Version}" 
                                                               Foreground="Gray" 
                                                               FontSize="{DynamicResource FontSizeSmall}"
                                                               VerticalAlignment="Center"
                                                               Margin="5,0"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                    </DockPanel>
                </GroupBox>
            </DockPanel>
        </Grid>
    </Grid>
</UserControl>