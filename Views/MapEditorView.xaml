<UserControl x:Class="WWXMapEditor.Views.MapEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WWXMapEditor.Views"
             xmlns:controls="clr-namespace:WWXMapEditor.Controls"
             xmlns:scaling="clr-namespace:WWXMapEditor.UI.Scaling"
             xmlns:conv="clr-namespace:WWXMapEditor.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="{DynamicResource SurfaceBrush}" Foreground="{DynamicResource ForegroundBrush}">
            <MenuItem Header="_File">
                <MenuItem Header="_New Map" Command="{Binding NewMapCommand}" InputGestureText="Ctrl+N"/>
                <MenuItem Header="_Open Map" Command="{Binding OpenMapCommand}" InputGestureText="Ctrl+O"/>
                <Separator/>
                <MenuItem Header="_Save" Command="{Binding SaveCommand}" InputGestureText="Ctrl+S"/>
                <MenuItem Header="Save _As..." Command="{Binding SaveAsCommand}" InputGestureText="Ctrl+Shift+S"/>
                <Separator/>
                <MenuItem Header="E_xit to Menu" Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" Command="{Binding UndoCommand}" InputGestureText="Ctrl+Z"/>
                <MenuItem Header="_Redo" Command="{Binding RedoCommand}" InputGestureText="Ctrl+Y"/>
                <Separator/>
                <MenuItem Header="Cu_t" Command="{Binding CutCommand}" InputGestureText="Ctrl+X"/>
                <MenuItem Header="_Copy" Command="{Binding CopyCommand}" InputGestureText="Ctrl+C"/>
                <MenuItem Header="_Paste" Command="{Binding PasteCommand}" InputGestureText="Ctrl+V"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Zoom _In" Command="{Binding ZoomInCommand}" InputGestureText="Ctrl+Plus"/>
                <MenuItem Header="Zoom _Out" Command="{Binding ZoomOutCommand}" InputGestureText="Ctrl+Minus"/>
                <MenuItem Header="_Reset Zoom" Command="{Binding ResetZoomCommand}" InputGestureText="Ctrl+0"/>
                <Separator/>
                <MenuItem Header="Show _Grid" IsCheckable="True" IsChecked="{Binding ShowGrid}" InputGestureText="G"/>
                <MenuItem Header="_Snap to Grid" IsCheckable="True" IsChecked="{Binding SnapToGrid}" InputGestureText="S"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Select" Command="{Binding SelectToolCommand}" CommandParameter="Select"/>
                <MenuItem Header="_Brush" Command="{Binding SelectToolCommand}" CommandParameter="Brush"/>
                <MenuItem Header="_Rectangle" Command="{Binding SelectToolCommand}" CommandParameter="Rectangle"/>
                <MenuItem Header="_Fill" Command="{Binding SelectToolCommand}" CommandParameter="Fill"/>
                <MenuItem Header="_Eraser" Command="{Binding SelectToolCommand}" CommandParameter="Eraser"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Command="{Binding AboutCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <ToolBar Grid.Row="1" Background="{DynamicResource Surface2Brush}" Height="40">
            <ToolBar.Resources>
                <Style TargetType="Button" BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                    <Setter Property="Width" Value="36"/>
                    <Setter Property="Height" Value="36"/>
                    <Setter Property="Margin" Value="2"/>
                    <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                    <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
                </Style>
                <Style TargetType="ToggleButton" BasedOn="{StaticResource {x:Static ToolBar.ToggleButtonStyleKey}}">
                    <Setter Property="Width" Value="36"/>
                    <Setter Property="Height" Value="36"/>
                    <Setter Property="Margin" Value="2"/>
                    <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                    <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
                </Style>
            </ToolBar.Resources>

            <Button Command="{Binding SaveCommand}" ToolTip="Save (Ctrl+S)">
                <TextBlock Text="ðŸ’¾" FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                                     Converter={StaticResource MultiplyConverter}, ConverterParameter=20}"/>
            </Button>
            <Separator/>

            <Button Command="{Binding UndoCommand}" ToolTip="Undo (Ctrl+Z)">
                <TextBlock Text="â†¶" FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                                     Converter={StaticResource MultiplyConverter}, ConverterParameter=20}"/>
            </Button>
            <Button Command="{Binding RedoCommand}" ToolTip="Redo (Ctrl+Y)">
                <TextBlock Text="â†·" FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                                     Converter={StaticResource MultiplyConverter}, ConverterParameter=20}"/>
            </Button>
            <Separator/>

            <RadioButton GroupName="Tools" IsChecked="{Binding IsSelectToolActive}" 
                         Command="{Binding SelectToolCommand}" CommandParameter="Select" 
                         ToolTip="Select Tool">
                <TextBlock Text="â¬š" FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                                     Converter={StaticResource MultiplyConverter}, ConverterParameter=20}"/>
            </RadioButton>
            <RadioButton GroupName="Tools" IsChecked="{Binding IsBrushToolActive}" 
                         Command="{Binding SelectToolCommand}" CommandParameter="Brush" 
                         ToolTip="Brush Tool">
                <TextBlock Text="ðŸ–Œ" FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                                     Converter={StaticResource MultiplyConverter}, ConverterParameter=20}"/>
            </RadioButton>
            <RadioButton GroupName="Tools" IsChecked="{Binding IsRectangleToolActive}" 
                         Command="{Binding SelectToolCommand}" CommandParameter="Rectangle" 
                         ToolTip="Rectangle Tool">
                <TextBlock Text="â–­" FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                                     Converter={StaticResource MultiplyConverter}, ConverterParameter=20}"/>
            </RadioButton>
            <RadioButton GroupName="Tools" IsChecked="{Binding IsFillToolActive}" 
                         Command="{Binding SelectToolCommand}" CommandParameter="Fill" 
                         ToolTip="Fill Tool">
                <TextBlock Text="ðŸª£" FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                                     Converter={StaticResource MultiplyConverter}, ConverterParameter=20}"/>
            </RadioButton>
            <RadioButton GroupName="Tools" IsChecked="{Binding IsEraserToolActive}" 
                         Command="{Binding SelectToolCommand}" CommandParameter="Eraser" 
                         ToolTip="Eraser Tool">
                <TextBlock Text="ðŸ—‘" FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                                     Converter={StaticResource MultiplyConverter}, ConverterParameter=20}"/>
            </RadioButton>
            <Separator/>

            <ToggleButton IsChecked="{Binding ShowGrid}" ToolTip="Toggle Grid (G)">
                <TextBlock Text="âŠž" FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                                     Converter={StaticResource MultiplyConverter}, ConverterParameter=20}"/>
            </ToggleButton>
            <ToggleButton IsChecked="{Binding SnapToGrid}" ToolTip="Toggle Snap to Grid (S)">
                <TextBlock Text="âŠŸ" FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                                     Converter={StaticResource MultiplyConverter}, ConverterParameter=20}"/>
            </ToggleButton>
        </ToolBar>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel -->
            <Border Grid.Column="0" Background="{DynamicResource Surface2Brush}" 
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="TILE PALETTE" 
                               Foreground="{DynamicResource ForegroundBrush}" 
                               FontFamily="Consolas"
                               FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                                  Converter={StaticResource MultiplyConverter}, ConverterParameter=16}"
                               FontWeight="Bold" 
                               Margin="10,10,10,5"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding TilePalette}" Margin="10">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="48" Height="48" Margin="2"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="1"
                                            Background="{Binding Color}"
                                            ToolTip="{Binding Name}">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" 
                                                         Command="{Binding DataContext.SelectTileCommand, 
                                                                   RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                         CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                        <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                                        <Setter Property="BorderThickness" Value="3"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Center Map -->
            <Grid Grid.Column="1" Background="{DynamicResource BackgroundBrush}">
                <ScrollViewer x:Name="MapScrollViewer" 
                              HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Auto"
                              Background="{DynamicResource BackgroundBrush}">
                    <Border x:Name="MapContainer" 
                            Background="{DynamicResource Surface3Brush}"
                            Margin="50">
                        <Grid>
                            <Grid.LayoutTransform>
                                <ScaleTransform ScaleX="{Binding ZoomLevel}" 
                                               ScaleY="{Binding ZoomLevel}" 
                                               CenterX="0.5" 
                                               CenterY="0.5"/>
                            </Grid.LayoutTransform>
                            <controls:MapCanvas x:Name="MapCanvas"
                                              Map="{Binding CurrentMap}"
                                              ShowGrid="{Binding ShowGrid}"
                                              GridSize="{Binding GridSize}"
                                              SelectedTool="{Binding SelectedTool}"
                                              SelectedTile="{Binding SelectedTile}"
                                              Width="{Binding CanvasWidth}"
                                              Height="{Binding CanvasHeight}"
                                              Background="{DynamicResource Surface3Brush}"
                                              ClipToBounds="True"/>
                        </Grid>
                    </Border>
                </ScrollViewer>

                <Border HorizontalAlignment="Right" 
                        VerticalAlignment="Bottom" 
                        Margin="20"
                        Background="{DynamicResource SurfaceBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="10,5">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="-" 
                                Style="{StaticResource EditorButtonStyle}" 
                                Width="30"
                                Height="30"
                                Command="{Binding ZoomOutCommand}"/>
                        <TextBlock Foreground="{DynamicResource ForegroundBrush}" 
                                   FontFamily="Consolas"
                                   VerticalAlignment="Center" 
                                   Margin="10,0"
                                   MinWidth="50"
                                   TextAlignment="Center"
                                   FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                                      Converter={StaticResource MultiplyConverter}, ConverterParameter=14}">
                            <TextBlock.Text>
                                <Binding Path="ZoomLevel" StringFormat="{}{0:P0}"/>
                            </TextBlock.Text>
                        </TextBlock>
                        <Button Content="+" 
                                Style="{StaticResource EditorButtonStyle}" 
                                Width="30"
                                Height="30"
                                Command="{Binding ZoomInCommand}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Right Panel -->
            <Border Grid.Column="2" Background="{DynamicResource Surface2Brush}" 
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="MAP PROPERTIES" 
                                   Foreground="{DynamicResource ForegroundBrush}" 
                                   FontFamily="Consolas"
                                   FontSize="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale,
                                                  Converter={StaticResource MultiplyConverter}, ConverterParameter=16}"
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>

                        <GroupBox Header="Map Information" Style="{StaticResource SettingsGroupBoxStyle}">
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Name:" Foreground="{DynamicResource ForegroundBrush}" 
                                          Margin="0,5" Grid.Row="0" Grid.Column="0"/>
                                <TextBox Text="{Binding CurrentMap.Name}" 
                                        Style="{StaticResource SettingsTextBoxStyle}"
                                        Grid.Row="0" Grid.Column="1" Margin="5"/>

                                <TextBlock Text="Width:" Foreground="{DynamicResource ForegroundBrush}" 
                                          Margin="0,5" Grid.Row="1" Grid.Column="0"/>
                                <TextBlock Text="{Binding CurrentMap.Width}" 
                                          Foreground="{DynamicResource ForegroundBrush}"
                                          Grid.Row="1" Grid.Column="1" Margin="5"/>

                                <TextBlock Text="Height:" Foreground="{DynamicResource ForegroundBrush}" 
                                          Margin="0,5" Grid.Row="2" Grid.Column="0"/>
                                <TextBlock Text="{Binding CurrentMap.Height}" 
                                          Foreground="{DynamicResource ForegroundBrush}"
                                          Grid.Row="2" Grid.Column="1" Margin="5"/>

                                <TextBlock Text="Players:" Foreground="{DynamicResource ForegroundBrush}" 
                                          Margin="0,5" Grid.Row="3" Grid.Column="0"/>
                                <TextBlock Text="{Binding CurrentMap.NumberOfPlayers}" 
                                          Foreground="{DynamicResource ForegroundBrush}"
                                          Grid.Row="3" Grid.Column="1" Margin="5"/>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="Current Tool" Style="{StaticResource SettingsGroupBoxStyle}" Margin="0,10,0,0">
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding SelectedTool}" 
                                          Foreground="{DynamicResource ForegroundBrush}"
                                          FontWeight="Bold"
                                          Margin="0,0,0,5"/>
                                <Grid Visibility="{Binding IsBrushSettingsVisible}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Brush Size:" 
                                              Foreground="{DynamicResource ForegroundBrush}" 
                                              VerticalAlignment="Center"
                                              Margin="0,0,10,0"/>
                                    <ComboBox Grid.Column="1" 
                                              SelectedItem="{Binding BrushSize}" 
                                              ItemsSource="{Binding BrushSizes}"
                                              Style="{StaticResource SettingsComboBoxStyle}"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Selected Tile" Style="{StaticResource SettingsGroupBoxStyle}" 
                                  Margin="0,10,0,0"
                                  Visibility="{Binding IsSelectedTileVisible}">
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="64"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                        Width="64" Height="64"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        Background="{Binding SelectedTile.Color}"/>

                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="{Binding SelectedTile.Name}" 
                                              Foreground="{DynamicResource ForegroundBrush}"
                                              FontWeight="Bold"
                                              Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding SelectedTile.TerrainType}" 
                                              Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                                </StackPanel>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{DynamicResource SurfaceBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
            <Grid Margin="5,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" 
                          Foreground="{DynamicResource ForegroundBrush}" 
                          FontFamily="Consolas"
                          Margin="5,0"/>
                <TextBlock Grid.Column="2" Foreground="{DynamicResource ForegroundBrush}" 
                          FontFamily="Consolas"
                          Margin="5,0">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="X: {0}, Y: {1}">
                            <Binding Path="MouseTileX"/>
                            <Binding Path="MouseTileY"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>