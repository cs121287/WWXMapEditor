<UserControl x:Class="WWXMapEditor.Views.Configuration.ReviewFinishStepView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WWXMapEditor.Views.Configuration"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <StackPanel>
        <TextBlock Text="REVIEW YOUR SETTINGS" 
                   Foreground="{DynamicResource ForegroundBrush}" 
                   FontFamily="Consolas"
                   FontSize="32" 
                   FontWeight="Bold" 
                   Margin="0,0,0,30"/>

        <TextBlock Text="Here's a summary of your configuration:" 
                   Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                   FontFamily="Consolas"
                   FontSize="16" 
                   Margin="0,0,0,20"/>

        <!-- Settings Summary -->
        <Border Background="{DynamicResource Surface2Brush}" 
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="5"
                Padding="30,20">
            <StackPanel>
                <TextBlock Text="THEME &amp; DISPLAY" 
                           Foreground="{DynamicResource AccentBrush}" 
                           FontFamily="Consolas"
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"/>

                <TextBlock Foreground="{DynamicResource ForegroundBrush}" 
                           FontFamily="Consolas"
                           FontSize="14"
                           Margin="0,0,0,20">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="• Theme: {0}&#x0a;• Fullscreen: {1}&#x0a;• UI Scale: {2}">
                            <Binding Path="ThemeSummary" Mode="OneWay"/>
                            <Binding Path="FullscreenSummary" Mode="OneWay"/>
                            <Binding Path="UIScalingSummary" Mode="OneWay"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>

                <TextBlock Text="EDITOR PREFERENCES" 
                           Foreground="{DynamicResource AccentBrush}" 
                           FontFamily="Consolas"
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"/>

                <TextBlock Foreground="{DynamicResource ForegroundBrush}" 
                           FontFamily="Consolas"
                           FontSize="14"
                           Margin="0,0,0,20">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="• Grid: {0}&#x0a;• Grid Size: {1} pixels&#x0a;• Auto-save: {2}">
                            <Binding Path="GridSummary" Mode="OneWay"/>
                            <Binding Path="GridSizeSummary" Mode="OneWay"/>
                            <Binding Path="AutoSaveSummary" Mode="OneWay"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>

                <TextBlock Text="FILE LOCATIONS" 
                           Foreground="{DynamicResource AccentBrush}" 
                           FontFamily="Consolas"
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"/>

                <TextBlock Text="{Binding FileLocationsSummary, Mode=OneWay}"
                           Foreground="{DynamicResource ForegroundBrush}" 
                           FontFamily="Consolas"
                           FontSize="14"/>
            </StackPanel>
        </Border>

        <TextBlock Text="You can always change these settings later from the Settings menu." 
                   Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                   FontFamily="Consolas"
                   FontSize="14" 
                   Margin="0,30,0,0"
                   TextAlignment="Center"/>
    </StackPanel>
</UserControl>