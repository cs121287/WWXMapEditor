<UserControl x:Class="WWXMapEditor.Views.NewMapSteps.BasicInformationStepView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WWXMapEditor.Views.NewMapSteps"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:scaling="clr-namespace:WWXMapEditor.UI.Scaling"
             xmlns:conv="clr-namespace:WWXMapEditor.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Converters -->
        <conv:MultiplyConverter x:Key="MultiplyConverter"/>
        <conv:StringComparisonConverter x:Key="StringComparisonConverter"/>
        <conv:IntComparisonConverter x:Key="IntComparisonConverter"/>

        <!-- Subtle slide-in like Settings/Configuration content -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.35"/>
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="20,0,0,0" To="0,0,0,0" Duration="0:0:0.35">
                <ThicknessAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>

        <!-- Themed section header styles (match Settings) -->
        <Style x:Key="SectionKicker" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Opacity" Value="0.95"/>
        </Style>
        <Style x:Key="SectionSub" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundSecondaryBrush}"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Opacity" Value="0.9"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Settings-like card style -->
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource Surface3Brush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="{DynamicResource ShadowColor}" Direction="270" ShadowDepth="2" Opacity="0.18" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Animated numeric TextBox (theme-aware, with focus + error effects) -->
        <Style x:Key="AnimatedNumericTextBox" TargetType="TextBox" BasedOn="{StaticResource SettingsTextBoxStyle}">
            <Setter Property="Height">
                <Setter.Value>
                    <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                             Converter="{StaticResource MultiplyConverter}" ConverterParameter="42"/>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize">
                <Setter.Value>
                    <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                             Converter="{StaticResource MultiplyConverter}" ConverterParameter="18"/>
                </Setter.Value>
            </Setter>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                        <TranslateTransform X="0" Y="0"/>
                    </TransformGroup>
                </Setter.Value>
            </Setter>
            <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ValidationErrorTemplate}"/>
            <Style.Triggers>
                <!-- Focused: subtle scale + border emphasis -->
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                                 To="1.03" Duration="0:0:0.12"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                                 To="1.03" Duration="0:0:0.12"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                                 To="1.0" Duration="0:0:0.12"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                                 To="1.0" Duration="0:0:0.12"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>

                <!-- Invalid: shake + tooltip with error -->
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="ToolTip" Value="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}"/>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.X)">
                                    <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.05" Value="6"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.10" Value="-6"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.15" Value="3"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.20" Value="-3"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.25" Value="0"/>
                                </DoubleAnimationUsingKeyFrames>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Terrain Type Strings (preserved for the right column card) -->
        <sys:String x:Key="TerrainPlains">Plains</sys:String>
        <sys:String x:Key="TerrainMountain">Mountain</sys:String>
        <sys:String x:Key="TerrainForest">Forest</sys:String>
        <sys:String x:Key="TerrainSand">Sand</sys:String>
        <sys:String x:Key="TerrainSea">Sea</sys:String>

        <!-- Player Count Options -->
        <sys:Int32 x:Key="Players2">2</sys:Int32>
        <sys:Int32 x:Key="Players3">3</sys:Int32>
        <sys:Int32 x:Key="Players4">4</sys:Int32>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeInAnimation}"/>
        </EventTrigger>
    </UserControl.Triggers>

    <!-- Layout aligned to Settings/Configuration: two columns of cards with subtle divider -->
    <Grid Margin="12,4,12,4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left Column: Identity -->
        <StackPanel Grid.Column="0" Margin="8,0,8,0">
            <!-- Header -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" 
                        Background="{DynamicResource AccentBrush}"
                        CornerRadius="28"
                        Margin="0,0,12,0">
                    <Border.Width>
                        <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                 Converter="{StaticResource MultiplyConverter}" ConverterParameter="56"/>
                    </Border.Width>
                    <Border.Height>
                        <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                 Converter="{StaticResource MultiplyConverter}" ConverterParameter="56"/>
                    </Border.Height>
                    <TextBlock Text="📝"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                        <TextBlock.FontSize>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="26"/>
                        </TextBlock.FontSize>
                    </TextBlock>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="MAP IDENTITY" Style="{StaticResource SectionKicker}">
                        <TextBlock.FontSize>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="14"/>
                        </TextBlock.FontSize>
                    </TextBlock>
                    <TextBlock Text="Give your map a unique name and description"
                               Style="{StaticResource SectionSub}">
                        <TextBlock.FontSize>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="12"/>
                        </TextBlock.FontSize>
                    </TextBlock>
                </StackPanel>
            </Grid>

            <!-- Name Card -->
            <Border Style="{StaticResource CardBorderStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Map Name"
                               Foreground="{DynamicResource ForegroundBrush}"
                               FontFamily="Consolas"
                               FontWeight="Bold"
                               Margin="0,0,0,8">
                        <TextBlock.FontSize>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="14"/>
                        </TextBlock.FontSize>
                    </TextBlock>

                    <TextBox Grid.Row="1"
                             Text="{Binding ParentViewModel.MapName, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource SettingsTextBoxStyle}"
                             VerticalContentAlignment="Center">
                        <TextBox.Height>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="42"/>
                        </TextBox.Height>
                        <TextBox.FontSize>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="18"/>
                        </TextBox.FontSize>
                    </TextBox>

                    <DockPanel Grid.Row="2" LastChildFill="False" Margin="0,6,0,0">
                        <TextBlock Text="{Binding ParentViewModel.MapName.Length, StringFormat='Characters: {0}/50'}"
                                   Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                   FontFamily="Consolas"
                                   DockPanel.Dock="Left">
                            <TextBlock.FontSize>
                                <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                         Converter="{StaticResource MultiplyConverter}" ConverterParameter="11"/>
                            </TextBlock.FontSize>
                        </TextBlock>
                    </DockPanel>
                </Grid>
            </Border>

            <!-- Description Card -->
            <Border Style="{StaticResource CardBorderStyle}" Margin="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Map Description"
                               Foreground="{DynamicResource ForegroundBrush}"
                               FontFamily="Consolas"
                               FontWeight="Bold"
                               Margin="0,0,0,8">
                        <TextBlock.FontSize>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="14"/>
                        </TextBlock.FontSize>
                    </TextBlock>

                    <TextBox Grid.Row="1"
                             Text="{Binding ParentViewModel.MapDescription, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource SettingsTextBoxStyle}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto">
                        <TextBox.Height>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="120"/>
                        </TextBox.Height>
                        <TextBox.FontSize>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="14"/>
                        </TextBox.FontSize>
                    </TextBox>

                    <TextBlock Grid.Row="2"
                               Text="Optional: Provide details about your map's theme or objectives"
                               Foreground="{DynamicResource ForegroundSecondaryBrush}"
                               FontFamily="Consolas"
                               FontStyle="Italic"
                               Margin="0,6,0,0">
                        <TextBlock.FontSize>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="11"/>
                        </TextBlock.FontSize>
                    </TextBlock>
                </Grid>
            </Border>
        </StackPanel>

        <!-- Subtle Divider -->
        <Border Grid.Column="1" Width="1" Margin="12,12" Opacity="0.22"
                Background="{DynamicResource BorderBrush}"/>

        <!-- Right Column: Configuration (Size + Terrain) -->
        <StackPanel Grid.Column="2" Margin="8,0,8,0">
            <!-- Header -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" 
                        Background="{DynamicResource AccentBrush}"
                        CornerRadius="28"
                        Margin="0,0,12,0">
                    <Border.Width>
                        <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                 Converter="{StaticResource MultiplyConverter}" ConverterParameter="56"/>
                    </Border.Width>
                    <Border.Height>
                        <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                 Converter="{StaticResource MultiplyConverter}" ConverterParameter="56"/>
                    </Border.Height>
                    <TextBlock Text="⚙️"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                        <TextBlock.FontSize>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="26"/>
                        </TextBlock.FontSize>
                    </TextBlock>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="MAP CONFIGURATION" Style="{StaticResource SectionKicker}">
                        <TextBlock.FontSize>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="14"/>
                        </TextBlock.FontSize>
                    </TextBlock>
                    <TextBlock Text="Configure size and starting terrain"
                               Style="{StaticResource SectionSub}">
                        <TextBlock.FontSize>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="12"/>
                        </TextBlock.FontSize>
                    </TextBlock>
                </StackPanel>
            </Grid>

            <!-- Size Card (two text boxes with validation and animations) -->
            <Border Style="{StaticResource CardBorderStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Title row with live dimension preview -->
                    <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,8">
                        <TextBlock Text="Map Size"
                                   Foreground="{DynamicResource ForegroundBrush}"
                                   FontFamily="Consolas"
                                   FontWeight="Bold"
                                   DockPanel.Dock="Left">
                            <TextBlock.FontSize>
                                <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                         Converter="{StaticResource MultiplyConverter}" ConverterParameter="14"/>
                            </TextBlock.FontSize>
                        </TextBlock>
                        <Border Background="{DynamicResource SurfaceBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="8,4"
                                Margin="8,0,0,0"
                                DockPanel.Dock="Right">
                            <TextBlock FontFamily="Consolas"
                                       Foreground="{DynamicResource ForegroundSecondaryBrush}">
                                <TextBlock.FontSize>
                                    <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                             Converter="{StaticResource MultiplyConverter}" ConverterParameter="12"/>
                                </TextBlock.FontSize>
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} × {1} tiles">
                                        <Binding Path="ParentViewModel.MapWidth"/>
                                        <Binding Path="ParentViewModel.MapHeight"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </Border>
                    </DockPanel>

                    <!-- Editors row: Width × Height -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Width -->
                        <StackPanel Grid.Column="0" Orientation="Vertical">
                            <TextBlock Text="Width"
                                       Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                       FontFamily="Consolas"
                                       Margin="0,0,0,4">
                                <TextBlock.FontSize>
                                    <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                             Converter="{StaticResource MultiplyConverter}" ConverterParameter="12"/>
                                </TextBlock.FontSize>
                            </TextBlock>
                            <TextBox Style="{StaticResource AnimatedNumericTextBox}">
                                <TextBox.Text>
                                    <Binding Path="ParentViewModel.MapWidth"
                                             UpdateSourceTrigger="PropertyChanged"
                                             ValidatesOnDataErrors="True"
                                             ValidatesOnExceptions="True"
                                             NotifyOnValidationError="True">
                                        <Binding.ValidationRules>
                                            <conv:NumericRangeValidationRule MinExclusive="20" MaxExclusive="400"/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                            <TextBlock Text="Must be greater than 20, less than 400"
                                       TextAlignment="Left"
                                       Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                       FontFamily="Consolas"
                                       Margin="2,4,2,0" Width="244" Height="31" TextWrapping="WrapWithOverflow">
                                <TextBlock.FontSize>
                                    <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                             Converter="{StaticResource MultiplyConverter}" ConverterParameter="11"/>
                                </TextBlock.FontSize>
                            </TextBlock>
                        </StackPanel>

                        <!-- times sign -->
                        <TextBlock Grid.Column="1" Text="×"
                                   Foreground="{DynamicResource ForegroundBrush}"
                                   FontFamily="Consolas"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="8,0">
                            <TextBlock.FontSize>
                                <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                         Converter="{StaticResource MultiplyConverter}" ConverterParameter="20"/>
                            </TextBlock.FontSize>
                        </TextBlock>

                        <!-- Height -->
                        <StackPanel Grid.Column="2" Orientation="Vertical">
                            <TextBlock Text="Height"
                                       Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                       FontFamily="Consolas"
                                       Margin="0,0,0,4">
                                <TextBlock.FontSize>
                                    <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                             Converter="{StaticResource MultiplyConverter}" ConverterParameter="12"/>
                                </TextBlock.FontSize>
                            </TextBlock>
                            <TextBox Style="{StaticResource AnimatedNumericTextBox}">
                                <TextBox.Text>
                                    <Binding Path="ParentViewModel.MapHeight"
                                             UpdateSourceTrigger="PropertyChanged"
                                             ValidatesOnDataErrors="True"
                                             ValidatesOnExceptions="True"
                                             NotifyOnValidationError="True">
                                        <Binding.ValidationRules>
                                            <conv:NumericRangeValidationRule MinExclusive="20" MaxExclusive="400"/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                            <TextBlock Text=""
                                       Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                       FontFamily="Consolas"
                                       Margin="2,4,0,0">
                                <TextBlock.FontSize>
                                    <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                             Converter="{StaticResource MultiplyConverter}" ConverterParameter="11"/>
                                </TextBlock.FontSize>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Terrain Card (preserved) -->
            <Border Style="{StaticResource CardBorderStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Starting Terrain"
                               Foreground="{DynamicResource ForegroundBrush}"
                               FontFamily="Consolas"
                               FontWeight="Bold"
                               Margin="0,0,0,8">
                        <TextBlock.FontSize>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="14"/>
                        </TextBlock.FontSize>
                    </TextBlock>

                    <WrapPanel Grid.Row="1" Orientation="Horizontal">
                        <!-- Plains -->
                        <RadioButton GroupName="TerrainType"
                                     Margin="0,0,10,8"
                                     IsChecked="{Binding ParentViewModel.SelectedTerrain, Converter={StaticResource StringComparisonConverter}, ConverterParameter={StaticResource TerrainPlains}}">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <Border x:Name="border"
                                            Background="{DynamicResource SurfaceBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="2"
                                            CornerRadius="6"
                                            Padding="12,8"
                                            Cursor="Hand">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0"
                                                    CornerRadius="3"
                                                    Margin="0,0,8,0"
                                                    Background="{DynamicResource TerrainPlainsBrush}">
                                                <Border.Width>
                                                    <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                                             Converter="{StaticResource MultiplyConverter}" ConverterParameter="18"/>
                                                </Border.Width>
                                                <Border.Height>
                                                    <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                                             Converter="{StaticResource MultiplyConverter}" ConverterParameter="18"/>
                                                </Border.Height>
                                            </Border>
                                            <TextBlock Grid.Column="1" Text="Plains" Foreground="{DynamicResource ForegroundBrush}" FontFamily="Consolas">
                                                <TextBlock.FontSize>
                                                    <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                                             Converter="{StaticResource MultiplyConverter}" ConverterParameter="13"/>
                                                </TextBlock.FontSize>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>

                        <!-- Mountain -->
                        <RadioButton GroupName="TerrainType"
                                     Margin="0,0,10,8"
                                     IsChecked="{Binding ParentViewModel.SelectedTerrain, Converter={StaticResource StringComparisonConverter}, ConverterParameter={StaticResource TerrainMountain}}">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <Border x:Name="border"
                                            Background="{DynamicResource SurfaceBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="2"
                                            CornerRadius="6"
                                            Padding="12,8"
                                            Cursor="Hand">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0"
                                                    CornerRadius="3"
                                                    Margin="0,0,8,0"
                                                    Background="{DynamicResource TerrainMountainBrush}">
                                                <Border.Width>
                                                    <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                                             Converter="{StaticResource MultiplyConverter}" ConverterParameter="18"/>
                                                </Border.Width>
                                                <Border.Height>
                                                    <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                                             Converter="{StaticResource MultiplyConverter}" ConverterParameter="18"/>
                                                </Border.Height>
                                            </Border>
                                            <TextBlock Grid.Column="1" Text="Mountain" Foreground="{DynamicResource ForegroundBrush}" FontFamily="Consolas">
                                                <TextBlock.FontSize>
                                                    <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                                             Converter="{StaticResource MultiplyConverter}" ConverterParameter="13"/>
                                                </TextBlock.FontSize>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>

                        <!-- Forest -->
                        <RadioButton GroupName="TerrainType"
                                     Margin="0,0,10,8"
                                     IsChecked="{Binding ParentViewModel.SelectedTerrain, Converter={StaticResource StringComparisonConverter}, ConverterParameter={StaticResource TerrainForest}}">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <Border x:Name="border"
                                            Background="{DynamicResource SurfaceBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="2"
                                            CornerRadius="6"
                                            Padding="12,8"
                                            Cursor="Hand">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0"
                                                    CornerRadius="3"
                                                    Margin="0,0,8,0"
                                                    Background="{DynamicResource TerrainForestBrush}">
                                                <Border.Width>
                                                    <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                                             Converter="{StaticResource MultiplyConverter}" ConverterParameter="18"/>
                                                </Border.Width>
                                                <Border.Height>
                                                    <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                                             Converter="{StaticResource MultiplyConverter}" ConverterParameter="18"/>
                                                </Border.Height>
                                            </Border>
                                            <TextBlock Grid.Column="1" Text="Forest" Foreground="{DynamicResource ForegroundBrush}" FontFamily="Consolas">
                                                <TextBlock.FontSize>
                                                    <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                                             Converter="{StaticResource MultiplyConverter}" ConverterParameter="13"/>
                                                </TextBlock.FontSize>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>
                    </WrapPanel>
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>