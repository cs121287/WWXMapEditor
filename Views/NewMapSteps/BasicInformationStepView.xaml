<UserControl x:Class="WWXMapEditor.Views.NewMapSteps.BasicInformationStepView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WWXMapEditor.Views.NewMapSteps"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    
    <StackPanel MaxWidth="600">
        <TextBlock Text="BASIC INFORMATION" 
                   Foreground="{DynamicResource ForegroundBrush}" 
                   FontFamily="Consolas"
                   FontSize="32" 
                   FontWeight="Bold" 
                   Margin="0,0,0,30"/>
        
        <TextBlock Text="Let's start with the basic details of your map" 
                   Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                   FontFamily="Consolas"
                   FontSize="16" 
                   Margin="0,0,0,30"/>
        
        <!-- Map Name -->
        <TextBlock Text="Map Name"
                   Foreground="{DynamicResource ForegroundBrush}"
                   FontFamily="Consolas"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,8"/>
        <TextBox Text="{Binding ParentViewModel.MapName}"
                 Style="{StaticResource SettingsTextBoxStyle}"
                 FontSize="16"
                 Margin="0,0,0,25"/>
        
        <!-- Map Description -->
        <TextBlock Text="Map Description"
                   Foreground="{DynamicResource ForegroundBrush}"
                   FontFamily="Consolas"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,8"/>
        <TextBox Text="{Binding ParentViewModel.MapDescription}"
                 Style="{StaticResource SettingsTextBoxStyle}"
                 FontSize="16"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 Height="100"
                 VerticalScrollBarVisibility="Auto"
                 Margin="0,0,0,25"/>
        
        <!-- Map Size -->
        <TextBlock Text="Map Size"
                   Foreground="{DynamicResource ForegroundBrush}"
                   FontFamily="Consolas"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,8"/>
        <Grid Margin="0,0,0,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Width (tiles)"
                           Foreground="{DynamicResource ForegroundSecondaryBrush}"
                           FontFamily="Consolas"
                           FontSize="14"
                           Margin="0,0,0,5"/>
                <TextBox Text="{Binding ParentViewModel.MapWidth}"
                         Style="{StaticResource SettingsTextBoxStyle}"
                         FontSize="16"/>
            </StackPanel>
            
            <TextBlock Grid.Column="1" Text="×"
                       Foreground="{DynamicResource ForegroundBrush}"
                       FontFamily="Consolas"
                       FontSize="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,20,0,0"/>
            
            <StackPanel Grid.Column="2">
                <TextBlock Text="Height (tiles)"
                           Foreground="{DynamicResource ForegroundSecondaryBrush}"
                           FontFamily="Consolas"
                           FontSize="14"
                           Margin="0,0,0,5"/>
                <TextBox Text="{Binding ParentViewModel.MapHeight}"
                         Style="{StaticResource SettingsTextBoxStyle}"
                         FontSize="16"/>
            </StackPanel>
        </Grid>
        
        <TextBlock Text="Map size must be between 10×10 and 500×500 tiles"
                   Foreground="{DynamicResource ForegroundSecondaryBrush}"
                   FontFamily="Consolas"
                   FontSize="12"
                   FontStyle="Italic"
                   Margin="0,0,0,25"/>
        
        <!-- Starting Terrain -->
        <TextBlock Text="Starting Terrain"
                   Foreground="{DynamicResource ForegroundBrush}"
                   FontFamily="Consolas"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,8"/>
        <ComboBox SelectedItem="{Binding ParentViewModel.SelectedTerrain}"
                  ItemsSource="{Binding ParentViewModel.TerrainTypes}"
                  Style="{StaticResource SettingsComboBoxStyle}"
                  FontSize="16"
                  Margin="0,0,0,25"/>
        
        <!-- Number of Players -->
        <TextBlock Text="Number of Players"
                   Foreground="{DynamicResource ForegroundBrush}"
                   FontFamily="Consolas"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,8"/>
        <ComboBox SelectedItem="{Binding ParentViewModel.NumberOfPlayers}"
                  ItemsSource="{Binding ParentViewModel.PlayerCountOptions}"
                  Style="{StaticResource SettingsComboBoxStyle}"
                  FontSize="16"/>
    </StackPanel>
</UserControl>