<UserControl x:Class="WWXMapEditor.Views.NewMapSteps.BasicInformationStepView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WWXMapEditor.Views.NewMapSteps"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:scaling="clr-namespace:WWXMapEditor.UI.Scaling"
             xmlns:conv="clr-namespace:WWXMapEditor.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Converters -->
        <conv:MultiplyConverter x:Key="MultiplyConverter"/>
        <conv:StringComparisonConverter x:Key="StringComparisonConverter"/>
        <conv:IntComparisonConverter x:Key="IntComparisonConverter"/>

        <!-- Subtle slide-in like Settings/Configuration content -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.35"/>
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="20,0,0,0" To="0,0,0,0" Duration="0:0:0.35">
                <ThicknessAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>

        <!-- Themed section header styles (match Settings) -->
        <Style x:Key="SectionKicker" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Opacity" Value="0.95"/>
        </Style>
        <Style x:Key="SectionSub" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundSecondaryBrush}"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Opacity" Value="0.9"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Settings-like card style -->
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource Surface3Brush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#AA000000" Direction="270" ShadowDepth="2" Opacity="0.18" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Terrain Type Strings -->
        <sys:String x:Key="TerrainPlains">Plains</sys:String>
        <sys:String x:Key="TerrainMountain">Mountain</sys:String>
        <sys:String x:Key="TerrainForest">Forest</sys:String>
        <sys:String x:Key="TerrainSand">Sand</sys:String>
        <sys:String x:Key="TerrainSea">Sea</sys:String>

        <!-- Player Count Options (kept as constants if used elsewhere) -->
        <sys:Int32 x:Key="Players2">2</sys:Int32>
        <sys:Int32 x:Key="Players3">3</sys:Int32>
        <sys:Int32 x:Key="Players4">4</sys:Int32>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeInAnimation}"/>
        </EventTrigger>
    </UserControl.Triggers>

    <!-- Layout aligned to Settings/Configuration: two columns of cards with subtle divider -->
    <Grid Margin="12,4,12,4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left Column: Identity -->
        <StackPanel Grid.Column="0" Margin="8,0,8,0">
            <!-- Header -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" 
                        Width="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale, Converter={StaticResource MultiplyConverter}, ConverterParameter=56}"
                        Height="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale, Converter={StaticResource MultiplyConverter}, ConverterParameter=56}"
                        Background="{DynamicResource AccentBrush}"
                        CornerRadius="28"
                        Margin="0,0,12,0">
                    <TextBlock Text="ğŸ“"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                        <TextBlock.FontSize>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="26"/>
                        </TextBlock.FontSize>
                    </TextBlock>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="MAP IDENTITY" Style="{StaticResource SectionKicker}">
                        <TextBlock.FontSize>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="14"/>
                        </TextBlock.FontSize>
                    </TextBlock>
                    <TextBlock Text="Give your map a unique name and description"
                               Style="{StaticResource SectionSub}">
                        <TextBlock.FontSize>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="12"/>
                        </TextBlock.FontSize>
                    </TextBlock>
                </StackPanel>
            </Grid>

            <!-- Name Card -->
            <Border Style="{StaticResource CardBorderStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Map Name"
                               Foreground="{DynamicResource ForegroundBrush}"
                               FontFamily="Consolas"
                               FontWeight="Bold"
                               Margin="0,0,0,10">
                        <TextBlock.FontSize>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="14"/>
                        </TextBlock.FontSize>
                    </TextBlock>

                    <TextBox Grid.Row="1"
                             Text="{Binding ParentViewModel.MapName, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource SettingsTextBoxStyle}"
                             VerticalContentAlignment="Center"
                             SnapsToDevicePixels="True">
                        <TextBox.Height>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="45"/>
                        </TextBox.Height>
                        <TextBox.FontSize>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="18"/>
                        </TextBox.FontSize>
                    </TextBox>

                    <TextBlock Grid.Row="2"
                               Text="{Binding ParentViewModel.MapName.Length, StringFormat='Characters: {0}/50'}"
                               Foreground="{DynamicResource ForegroundSecondaryBrush}"
                               FontFamily="Consolas"
                               HorizontalAlignment="Right"
                               Margin="0,5,0,0">
                        <TextBlock.FontSize>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="11"/>
                        </TextBlock.FontSize>
                    </TextBlock>
                </Grid>
            </Border>

            <!-- Description Card -->
            <Border Style="{StaticResource CardBorderStyle}" Margin="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Map Description"
                               Foreground="{DynamicResource ForegroundBrush}"
                               FontFamily="Consolas"
                               FontWeight="Bold"
                               Margin="0,0,0,10">
                        <TextBlock.FontSize>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="14"/>
                        </TextBlock.FontSize>
                    </TextBlock>

                    <TextBox Grid.Row="1"
                             Text="{Binding ParentViewModel.MapDescription, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource SettingsTextBoxStyle}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             SnapsToDevicePixels="True">
                        <TextBox.Height>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="120"/>
                        </TextBox.Height>
                        <TextBox.FontSize>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="14"/>
                        </TextBox.FontSize>
                    </TextBox>

                    <TextBlock Grid.Row="2"
                               Text="Optional: Provide details about your map's theme or objectives"
                               Foreground="{DynamicResource ForegroundSecondaryBrush}"
                               FontFamily="Consolas"
                               FontStyle="Italic"
                               Margin="0,5,0,0">
                        <TextBlock.FontSize>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="11"/>
                        </TextBlock.FontSize>
                    </TextBlock>
                </Grid>
            </Border>
        </StackPanel>

        <!-- Subtle Divider -->
        <Border Grid.Column="1" Width="1" Margin="12,12" Opacity="0.22"
                Background="{DynamicResource BorderBrush}"/>

        <!-- Right Column: Configuration (Size + Terrain only; Alliances moved to Player Select) -->
        <StackPanel Grid.Column="2" Margin="8,0,8,0">
            <!-- Header -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" 
                        Width="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale, Converter={StaticResource MultiplyConverter}, ConverterParameter=56}"
                        Height="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale, Converter={StaticResource MultiplyConverter}, ConverterParameter=56}"
                        Background="{DynamicResource AccentBrush}"
                        CornerRadius="28"
                        Margin="0,0,12,0">
                    <TextBlock Text="âš™ï¸"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                        <TextBlock.FontSize>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="26"/>
                        </TextBlock.FontSize>
                    </TextBlock>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="MAP CONFIGURATION" Style="{StaticResource SectionKicker}">
                        <TextBlock.FontSize>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="14"/>
                        </TextBlock.FontSize>
                    </TextBlock>
                    <TextBlock Text="Configure size and starting terrain"
                               Style="{StaticResource SectionSub}">
                        <TextBlock.FontSize>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="12"/>
                        </TextBlock.FontSize>
                    </TextBlock>
                </StackPanel>
            </Grid>

            <!-- Size Card -->
            <Border Style="{StaticResource CardBorderStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Width -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Width"
                                   Foreground="{DynamicResource ForegroundBrush}"
                                   FontFamily="Consolas"
                                   FontWeight="Bold"
                                   Margin="0,0,0,8">
                            <TextBlock.FontSize>
                                <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                         Converter="{StaticResource MultiplyConverter}" ConverterParameter="13"/>
                            </TextBlock.FontSize>
                        </TextBlock>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Slider Grid.Column="0"
                                    Value="{Binding ParentViewModel.MapWidth}"
                                    Minimum="10" Maximum="200"
                                    TickFrequency="10"
                                    IsSnapToTickEnabled="True"
                                    Margin="0,0,10,0"/>
                            <Border Grid.Column="1"
                                    Background="{DynamicResource AccentBrush}"
                                    CornerRadius="4"
                                    Padding="10,5"
                                    MinWidth="50">
                                <TextBlock Text="{Binding ParentViewModel.MapWidth}"
                                           Foreground="{DynamicResource BackgroundBrush}"
                                           FontFamily="Consolas"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </StackPanel>

                    <!-- times sign -->
                    <TextBlock Grid.Column="1" Text="Ã—"
                               Foreground="{DynamicResource ForegroundBrush}"
                               FontFamily="Consolas"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0,15,0,0">
                        <TextBlock.FontSize>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="20"/>
                        </TextBlock.FontSize>
                    </TextBlock>

                    <!-- Height -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Height"
                                   Foreground="{DynamicResource ForegroundBrush}"
                                   FontFamily="Consolas"
                                   FontWeight="Bold"
                                   Margin="0,0,0,8">
                            <TextBlock.FontSize>
                                <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                         Converter="{StaticResource MultiplyConverter}" ConverterParameter="13"/>
                            </TextBlock.FontSize>
                        </TextBlock>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Slider Grid.Column="0"
                                    Value="{Binding ParentViewModel.MapHeight}"
                                    Minimum="10" Maximum="200"
                                    TickFrequency="10"
                                    IsSnapToTickEnabled="True"
                                    Margin="0,0,10,0"/>
                            <Border Grid.Column="1"
                                    Background="{DynamicResource AccentBrush}"
                                    CornerRadius="4"
                                    Padding="10,5"
                                    MinWidth="50">
                                <TextBlock Text="{Binding ParentViewModel.MapHeight}"
                                           Foreground="{DynamicResource BackgroundBrush}"
                                           FontFamily="Consolas"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Terrain Card -->
            <Border Style="{StaticResource CardBorderStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Starting Terrain"
                               Foreground="{DynamicResource ForegroundBrush}"
                               FontFamily="Consolas"
                               FontWeight="Bold"
                               Margin="0,0,0,10">
                        <TextBlock.FontSize>
                            <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                     Converter="{StaticResource MultiplyConverter}" ConverterParameter="14"/>
                        </TextBlock.FontSize>
                    </TextBlock>

                    <WrapPanel Grid.Row="1" Orientation="Horizontal">
                        <!-- Plains -->
                        <RadioButton GroupName="TerrainType"
                                     Margin="0,0,12,10"
                                     IsChecked="{Binding ParentViewModel.SelectedTerrain, Converter={StaticResource StringComparisonConverter}, ConverterParameter={StaticResource TerrainPlains}}">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <Border x:Name="border"
                                            Background="{DynamicResource SurfaceBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="2"
                                            CornerRadius="6"
                                            Padding="15,10"
                                            Cursor="Hand">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0"
                                                    Width="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale, Converter={StaticResource MultiplyConverter}, ConverterParameter=20}"
                                                    Height="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale, Converter={StaticResource MultiplyConverter}, ConverterParameter=20}"
                                                    CornerRadius="3" Margin="0,0,10,0" Background="#90EE90"/>
                                            <TextBlock Grid.Column="1" Text="Plains" Foreground="{DynamicResource ForegroundBrush}" FontFamily="Consolas">
                                                <TextBlock.FontSize>
                                                    <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                                             Converter="{StaticResource MultiplyConverter}" ConverterParameter="13"/>
                                                </TextBlock.FontSize>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>

                        <!-- Mountain -->
                        <RadioButton GroupName="TerrainType"
                                     Margin="0,0,12,10"
                                     IsChecked="{Binding ParentViewModel.SelectedTerrain, Converter={StaticResource StringComparisonConverter}, ConverterParameter={StaticResource TerrainMountain}}">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <Border x:Name="border"
                                            Background="{DynamicResource SurfaceBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="2"
                                            CornerRadius="6"
                                            Padding="15,10"
                                            Cursor="Hand">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0"
                                                    Width="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale, Converter={StaticResource MultiplyConverter}, ConverterParameter=20}"
                                                    Height="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale, Converter={StaticResource MultiplyConverter}, ConverterParameter=20}"
                                                    CornerRadius="3" Margin="0,0,10,0" Background="#8B8989"/>
                                            <TextBlock Grid.Column="1" Text="Mountain" Foreground="{DynamicResource ForegroundBrush}" FontFamily="Consolas">
                                                <TextBlock.FontSize>
                                                    <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                                             Converter="{StaticResource MultiplyConverter}" ConverterParameter="13"/>
                                                </TextBlock.FontSize>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>

                        <!-- Forest -->
                        <RadioButton GroupName="TerrainType"
                                     Margin="0,0,12,10"
                                     IsChecked="{Binding ParentViewModel.SelectedTerrain, Converter={StaticResource StringComparisonConverter}, ConverterParameter={StaticResource TerrainForest}}">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <Border x:Name="border"
                                            Background="{DynamicResource SurfaceBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="2"
                                            CornerRadius="6"
                                            Padding="15,10"
                                            Cursor="Hand">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0"
                                                    Width="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale, Converter={StaticResource MultiplyConverter}, ConverterParameter=20}"
                                                    Height="{Binding Source={x:Static scaling:ScaleService.Instance}, Path=FontScale, Converter={StaticResource MultiplyConverter}, ConverterParameter=20}"
                                                    CornerRadius="3" Margin="0,0,10,0" Background="#228B22"/>
                                            <TextBlock Grid.Column="1" Text="Forest" Foreground="{DynamicResource ForegroundBrush}" FontFamily="Consolas">
                                                <TextBlock.FontSize>
                                                    <Binding Source="{x:Static scaling:ScaleService.Instance}" Path="FontScale"
                                                             Converter="{StaticResource MultiplyConverter}" ConverterParameter="13"/>
                                                </TextBlock.FontSize>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>
                    </WrapPanel>
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>