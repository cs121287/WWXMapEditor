<UserControl x:Class="WWXMapEditor.Views.NewMapSteps.FogOfWarStepView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WWXMapEditor.Views.NewMapSteps"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Settings -->
        <Border Grid.Column="0" 
                Background="{DynamicResource Surface2Brush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,1,0">
            <Grid Margin="40,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" 
                            Width="60" Height="60"
                            Background="{DynamicResource AccentBrush}"
                            CornerRadius="30"
                            Margin="0,0,15,0">
                        <TextBlock Text="ðŸŒ«ï¸" 
                                   FontSize="28"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="FOG OF WAR" 
                                   Foreground="{DynamicResource ForegroundBrush}"
                                   FontFamily="Consolas"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="Configure visibility settings" 
                                   Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                   FontFamily="Consolas"
                                   FontSize="12"/>
                    </StackPanel>
                </Grid>

                <!-- Main Toggle -->
                <Border Grid.Row="1"
                        Background="{DynamicResource SurfaceBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,20">
                    <CheckBox IsChecked="{Binding ParentViewModel.FogOfWarEnabled}">
                        <CheckBox.Template>
                            <ControlTemplate TargetType="CheckBox">
                                <Grid Cursor="Hand">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                        <TextBlock Text="Enable Fog of War"
                                                   Foreground="{DynamicResource ForegroundBrush}"
                                                   FontFamily="Consolas"
                                                   FontSize="16"
                                                   FontWeight="Bold"/>
                                        <TextBlock Text="Limits visibility to explored areas"
                                                   Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                                   FontFamily="Consolas"
                                                   FontSize="12"
                                                   Margin="0,5,0,0"/>
                                    </StackPanel>

                                    <!-- Toggle Switch -->
                                    <Border Grid.Column="2"
                                            x:Name="ToggleBackground"
                                            Width="60" Height="30"
                                            Background="{DynamicResource Surface3Brush}"
                                            CornerRadius="15">
                                        <Canvas>
                                            <Ellipse x:Name="ToggleCircle"
                                                     Width="26" Height="26"
                                                     Fill="{DynamicResource ForegroundBrush}"
                                                     Canvas.Left="2"
                                                     Canvas.Top="2">
                                                <Ellipse.RenderTransform>
                                                    <TranslateTransform x:Name="ToggleTransform" X="0"/>
                                                </Ellipse.RenderTransform>
                                            </Ellipse>
                                        </Canvas>
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="ToggleBackground" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="ToggleTransform"
                                                                     Storyboard.TargetProperty="X"
                                                                     To="30" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="ToggleTransform"
                                                                     Storyboard.TargetProperty="X"
                                                                     To="0" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </CheckBox.Template>
                    </CheckBox>
                </Border>

                <!-- Settings -->
                <StackPanel Grid.Row="2"
                            IsEnabled="{Binding ParentViewModel.FogOfWarEnabled}">

                    <!-- Shroud Type -->
                    <TextBlock Text="Shroud Type"
                               Foreground="{DynamicResource ForegroundBrush}"
                               FontFamily="Consolas"
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="0,0,0,15"/>

                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Black Shroud Option -->
                        <RadioButton Grid.Column="0"
                                     GroupName="ShroudType"
                                     IsChecked="{Binding ParentViewModel.ShroudType, Converter={StaticResource StringComparisonConverter}, ConverterParameter=Black}"
                                     Margin="0,0,5,0">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <Border x:Name="border"
                                            Background="{DynamicResource Surface3Brush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="2"
                                            CornerRadius="8"
                                            Padding="15"
                                            Cursor="Hand">
                                        <StackPanel>
                                            <Border Width="40" Height="40"
                                                    Background="Black"
                                                    CornerRadius="4"
                                                    Margin="0,0,0,10"
                                                    HorizontalAlignment="Center"/>
                                            <TextBlock Text="Black"
                                                       Foreground="{DynamicResource ForegroundBrush}"
                                                       FontFamily="Consolas"
                                                       FontSize="13"
                                                       FontWeight="Bold"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="Unexplored"
                                                       Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                                       FontFamily="Consolas"
                                                       FontSize="10"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>

                        <!-- Grey Shroud Option -->
                        <RadioButton Grid.Column="1"
                                     GroupName="ShroudType"
                                     IsChecked="{Binding ParentViewModel.ShroudType, Converter={StaticResource StringComparisonConverter}, ConverterParameter=Grey}"
                                     Margin="5,0,0,0">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <Border x:Name="border"
                                            Background="{DynamicResource Surface3Brush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="2"
                                            CornerRadius="8"
                                            Padding="15"
                                            Cursor="Hand">
                                        <StackPanel>
                                            <Border Width="40" Height="40"
                                                    Background="Gray"
                                                    CornerRadius="4"
                                                    Margin="0,0,0,10"
                                                    HorizontalAlignment="Center"/>
                                            <TextBlock Text="Grey"
                                                       Foreground="{DynamicResource ForegroundBrush}"
                                                       FontFamily="Consolas"
                                                       FontSize="13"
                                                       FontWeight="Bold"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="Explored"
                                                       Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                                       FontFamily="Consolas"
                                                       FontSize="10"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>
                    </Grid>

                    <!-- Vision Range Multiplier -->
                    <TextBlock Text="Vision Range Penalty"
                               Foreground="{DynamicResource ForegroundBrush}"
                               FontFamily="Consolas"
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Slider Grid.Row="0"
                                Value="{Binding ParentViewModel.VisionPenaltyMultiplier}"
                                Minimum="1"
                                Maximum="3"
                                TickFrequency="0.5"
                                IsSnapToTickEnabled="True"
                                Margin="0,0,0,10"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Low"
                                       Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                       FontFamily="Consolas"
                                       FontSize="11"
                                       HorizontalAlignment="Left"/>

                            <TextBlock Grid.Column="1"
                                       Text="{Binding ParentViewModel.VisionPenaltyMultiplier, StringFormat='{}{0:F1}x'}"
                                       Foreground="{DynamicResource AccentBrush}"
                                       FontFamily="Consolas"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"/>

                            <TextBlock Grid.Column="2"
                                       Text="High"
                                       Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                       FontFamily="Consolas"
                                       FontSize="11"
                                       HorizontalAlignment="Right"/>
                        </Grid>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Right Panel - Visual Preview -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Preview Header -->
            <Border Grid.Row="0"
                    Background="{DynamicResource Surface3Brush}"
                    Padding="30,20">
                <TextBlock Text="PREVIEW"
                           Foreground="{DynamicResource ForegroundBrush}"
                           FontFamily="Consolas"
                           FontSize="16"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Interactive Preview -->
            <Grid Grid.Row="1" Margin="40">
                <Border Background="{DynamicResource BackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="2"
                        CornerRadius="8">
                    <Grid>
                        <!-- Minimap Preview -->
                        <Canvas x:Name="PreviewCanvas"
                                Width="400" Height="400"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                            <Canvas.Background>
                                <DrawingBrush TileMode="Tile" Viewport="0,0,20,20" ViewportUnits="Absolute">
                                    <DrawingBrush.Drawing>
                                        <GeometryDrawing Brush="{DynamicResource Surface2Brush}">
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="0,0,20,20"/>
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>
                                    </DrawingBrush.Drawing>
                                </DrawingBrush>
                            </Canvas.Background>

                            <!-- Fog Effect Overlay -->
                            <Grid Width="400" Height="400">
                                <Grid.OpacityMask>
                                    <RadialGradientBrush Center="0.5,0.5" RadiusX="0.3" RadiusY="0.3">
                                        <GradientStop Color="Transparent" Offset="0"/>
                                        <GradientStop Color="Black" Offset="1"/>
                                    </RadialGradientBrush>
                                </Grid.OpacityMask>
                                <Rectangle Fill="Black" 
                                           Visibility="{Binding ParentViewModel.FogOfWarEnabled, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </Grid>

                            <!-- Unit Indicator -->
                            <Ellipse Width="30" Height="30"
                                     Fill="{DynamicResource AccentBrush}"
                                     Canvas.Left="185"
                                     Canvas.Top="185">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="5"/>
                                </Ellipse.Effect>
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                 From="0.5" To="1" Duration="0:0:1"
                                                                 AutoReverse="True"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>
                        </Canvas>

                        <!-- Legend -->
                        <Border Background="{DynamicResource Surface2Brush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="15"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Margin="20">
                            <StackPanel>
                                <TextBlock Text="LEGEND"
                                           Foreground="{DynamicResource ForegroundBrush}"
                                           FontFamily="Consolas"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Margin="0,0,0,10"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Ellipse Grid.Row="0" Grid.Column="0"
                                             Width="12" Height="12"
                                             Fill="{DynamicResource AccentBrush}"
                                             Margin="0,0,10,5"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1"
                                               Text="Unit Position"
                                               Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                               FontFamily="Consolas"
                                               FontSize="11"
                                               Margin="0,0,0,5"/>

                                    <Rectangle Grid.Row="1" Grid.Column="0"
                                               Width="12" Height="12"
                                               Fill="Black"
                                               Opacity="0.8"
                                               Margin="0,0,10,5"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1"
                                               Text="Fog of War"
                                               Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                               FontFamily="Consolas"
                                               FontSize="11"
                                               Margin="0,0,0,5"/>

                                    <Rectangle Grid.Row="2" Grid.Column="0"
                                               Width="12" Height="12"
                                               Fill="Transparent"
                                               Stroke="{DynamicResource BorderBrush}"
                                               StrokeThickness="1"
                                               Margin="0,0,10,0"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1"
                                               Text="Visible Area"
                                               Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                               FontFamily="Consolas"
                                               FontSize="11"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>