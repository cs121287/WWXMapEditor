<UserControl x:Class="WWXMapEditor.Views.NewMapSteps.FogOfWarStepView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WWXMapEditor.Views.NewMapSteps"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <StackPanel MaxWidth="600">
        <TextBlock Text="FOG OF WAR SETTINGS" 
                   Foreground="{DynamicResource ForegroundBrush}" 
                   FontFamily="Consolas"
                   FontSize="32" 
                   FontWeight="Bold" 
                   Margin="0,0,0,30"/>

        <TextBlock Text="Configure visibility and exploration mechanics" 
                   Foreground="{DynamicResource ForegroundSecondaryBrush}" 
                   FontFamily="Consolas"
                   FontSize="16" 
                   Margin="0,0,0,30"/>

        <Border Background="{DynamicResource Surface2Brush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="30,25">
            <StackPanel>
                <CheckBox IsChecked="{Binding ParentViewModel.FogOfWarEnabled}"
                          Style="{StaticResource SettingsCheckBoxStyle}"
                          FontSize="18"
                          Margin="0,0,0,25">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Enable Fog of War" 
                                   Foreground="{DynamicResource ForegroundBrush}"
                                   FontFamily="Consolas"
                                   FontWeight="Bold"/>
                        <TextBlock Text="Limits player visibility to areas explored by their units"
                                   Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                   FontFamily="Consolas"
                                   FontSize="14"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </CheckBox>

                <Grid IsEnabled="{Binding ParentViewModel.FogOfWarEnabled}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,30">
                        <TextBlock Text="Shroud Type"
                                   Foreground="{DynamicResource ForegroundBrush}"
                                   FontFamily="Consolas"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,8"/>
                        <ComboBox SelectedItem="{Binding ParentViewModel.ShroudType}"
                                  ItemsSource="{Binding ParentViewModel.ShroudTypes}"
                                  Style="{StaticResource SettingsComboBoxStyle}"
                                  FontSize="16"
                                  Margin="0,0,0,10"/>

                        <Border Background="{DynamicResource BackgroundBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="3"
                                Padding="15">
                            <StackPanel>
                                <TextBlock Text="• Black: Completely hidden areas that have never been explored"
                                           Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                           FontFamily="Consolas"
                                           FontSize="14"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="• Grey: Previously explored areas that are no longer in vision"
                                           Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                           FontFamily="Consolas"
                                           FontSize="14"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Vision Penalty Range Multiplier"
                                   Foreground="{DynamicResource ForegroundBrush}"
                                   FontFamily="Consolas"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,8"/>
                        <ComboBox SelectedItem="{Binding ParentViewModel.VisionPenaltyMultiplierString}"
                                  ItemsSource="{Binding ParentViewModel.VisionPenaltyMultipliers}"
                                  Style="{StaticResource SettingsComboBoxStyle}"
                                  FontSize="16"
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="Controls how far units can see in fog. Higher multipliers mean greater reduction in unit visibility."
                                   Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                   FontFamily="Consolas"
                                   FontSize="14"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>