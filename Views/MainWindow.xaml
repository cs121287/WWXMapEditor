<Window x:Class="WWXMapEditor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WWXMapEditor.Views"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="1080" 
        Width="1920"
        MinHeight="720"
        MinWidth="1280"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{DynamicResource BackgroundBrush}">

    <Grid>
        <!-- Main Menu View - Shows when no other view is active -->
        <local:MainMenuView x:Name="MainMenu" 
                            Visibility="{Binding MainMenuVisibility}"/>

        <!-- Content Container for other views -->
        <ContentControl Content="{Binding CurrentView}" 
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"/>
    </Grid>
</Window>